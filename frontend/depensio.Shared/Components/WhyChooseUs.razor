<section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">Pourquoi nous choisir ?</h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        @foreach (var feature in Features)
        {
            <div class="bg-white rounded-xl shadow-sm p-8 text-center">
                <div class="text-4xl text-amber-700 mb-4">@((MarkupString)feature.Icon)</div>
                <h3 class="text-lg font-semibold text-gray-800 mb-2">@feature.Title</h3>
                <p class="text-gray-600 text-sm">@feature.Description</p>
            </div>
        }
    </div>
</section>

