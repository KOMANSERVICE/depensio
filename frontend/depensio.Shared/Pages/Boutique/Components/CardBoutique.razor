@using depensio.Shared.Pages.Boutique.Model

<div class="bg-white rounded-xl custom-shadow overflow-hidden hover-scale">
    <div class="h-3 bg-primary-700"></div>
    <div class="p-6">
        <div class="flex justify-between items-start">
            <div class="w-14 h-14 rounded-lg bg-amber-50 flex items-center justify-center">
                <i class="fas fa-store text-primary-700 text-2xl"></i>
            </div>
            <div class="flex space-x-2">
                <button class="text-gray-400 hover:text-primary-700 transition">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
            </div>
        </div>
        <h3 class="text-xl font-semibold mt-4 text-gray-800">@boutique.Name</h3>
        <p class="text-gray-500 mt-2">Adresse: @boutique.Location</p>
        <p class="text-gray-500 mt-2">Activité: Boulangerie artisanale</p>
        <div class="mt-6 pt-4 border-t border-gray-100 flex justify-between items-center">
            <div>
                <p class="text-xs text-gray-500">Créée le</p>
                <p class="text-sm font-medium">15/03/2020</p>
            </div>
            <NavLink href="@($"/dashboard/{boutique.Id}")" class="text-primary-700 hover:text-amber-700 font-medium flex items-center space-x-1">
                <span>Accéder</span>
                <i class="fas fa-chevron-right text-sm"></i>
            </NavLink>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public BoutiqueDTO boutique { get; set; }
}