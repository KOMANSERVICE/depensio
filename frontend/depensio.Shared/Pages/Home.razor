@inject IFormFactor FormFactor
@layout HomeLayout

<PageTitle>Depensio - Acceuil</PageTitle>
@* 
 *@
    <!-- Hero Section -->
    <section id="home" class="relative text-white bg-cover bg-center " style="background-image: url('https://images.unsplash.com/photo-1497366754035-f200968a6e72?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80')">
        <div class="w-full h-full  flex items-center py-20 bg-black opacity-70">
            <div class="container mx-auto px-6 flex flex-col md:flex-row items-center justify-center">
                <div class="md:w-1/2 mb-10 md:mb-0 ">
                    <h1 class="text-3xl md:text-3xl font-bold leading-tight mb-6">Transformez votre travail avec notre Depensio</h1>
                    <p class="text-xl mb-8">L'outil tout-en-un pour optimiser votre productivité et simplifier vos processus métiers.</p>
                    <div class="flex space-x-4">
                        <a href="#" class="px-8 py-3 bg-white text-primary-700 font-bold rounded-md hover:bg-opacity-90 transition">Essai gratuit</a>
                        <a href="#" class="px-8 py-3 border-2 border-white text-white font-bold rounded-md hover:bg-white hover:text-primary-700 transition">Voir la démo</a>
                    </div>
                </div>
                <div class="md:w-1/2 flex justify-center">
                    <div class="relative w-full max-w-md">
                        <div class="absolute -top-6 -left-6 w-32 h-32 bg-yellow-200 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
                        <div class="absolute -bottom-8 -right-8 w-32 h-32 bg-primary-700 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
                        <div class="relative bg-white rounded-lg shadow-xl p-4">
                            <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="Dashboard" class="rounded-md">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-gray-800 mb-4">Nos fonctionnalités clés</h2>
                <div class="w-20 h-1 bg-primary-700 mx-auto mb-6"></div>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">Découvrez ce qui rend notre solution indispensable pour votre activité.</p>
            </div>
            <div class="grid md:grid-cols-2 gap-12">
                <div class="flex">
                    <div class="mr-6">
                        <div class="w-12 h-12 rounded-full bg-primary-700 bg-opacity-10 flex items-center justify-center">
                            <i class="fas fa-chart-line text-primary-700 text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3">Tableaux de bord</h3>
                        <p class="text-gray-600">Visualisez vos indicateurs clés avec des graphiques et widgets adaptés à vos besoins métiers.</p>
                    </div>
                </div>
                <div class="flex">
                    <div class="mr-6">
                        <div class="w-12 h-12 rounded-full bg-primary-700 bg-opacity-10 flex items-center justify-center">
                            <i class="fas fa-tasks text-primary-700 text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3">Gestion de projets avancée</h3>
                        <p class="text-gray-600">Planifiez, suivez et collaborez sur vos projets avec des outils intégrés de gestion des tâches.</p>
                    </div>
                </div>
                <div class="flex">
                    <div class="mr-6">
                        <div class="w-12 h-12 rounded-full bg-primary-700 bg-opacity-10 flex items-center justify-center">
                            <i class="fas fa-file-invoice-dollar text-primary-700 text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3">Facturation automatisée</h3>
                        <p class="text-gray-600">Générez des factures professionnelles en quelques clics et suivez les paiements en temps réel.</p>
                    </div>
                </div>
                <div class="flex">
                    <div class="mr-6">
                        <div class="w-12 h-12 rounded-full bg-primary-700 bg-opacity-10 flex items-center justify-center">
                            <i class="fas fa-users text-primary-700 text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3">Gestion des clients</h3>
                        <p class="text-gray-600">Centralisez les informations de vos clients, leurs historiques et interactions avec votre entreprise.</p>
                    </div>
                </div>
                <div class="flex">
                    <div class="mr-6">
                        <div class="w-12 h-12 rounded-full bg-primary-700 bg-opacity-10 flex items-center justify-center">
                            <i class="fas fa-mobile-alt text-primary-700 text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3">Application mobile</h3>
                        <p class="text-gray-600">Accédez à toutes les fonctionnalités depuis votre smartphone, où que vous soyez.</p>
                    </div>
                </div>
                <div class="flex">
                    <div class="mr-6">
                        <div class="w-12 h-12 rounded-full bg-primary-700 bg-opacity-10 flex items-center justify-center">
                            <i class="fas fa-plug text-primary-700 text-xl"></i>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-gray-800 mb-3">Intégrations multiples</h3>
                        <p class="text-gray-600">Connectez notre solution à vos outils préférés (Google Workspace, Microsoft 365, etc.).</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Pricing Section -->
    <Pricing />


    <!-- About Section -->
    <section id="about" class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-gray-800 mb-4">Notre solution en quelques mots</h2>
                <div class="w-20 h-1 bg-primary-700 mx-auto mb-6"></div>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">Une plateforme intuitive conçue pour répondre aux besoins des professionnels exigeants, combinant puissance et simplicité d'utilisation.</p>
            </div>
            <div class="grid md:grid-cols-3 gap-10">
                <div class="bg-gray-50 p-8 rounded-lg hover:shadow-lg transition">
                    <div class="w-16 h-16 bg-primary-700 bg-opacity-10 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-bolt text-primary-700 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Rapidité</h3>
                    <p class="text-gray-600">Exécutez vos tâches en un temps record grâce à une interface optimisée et des processus automatisés.</p>
                </div>
                <div class="bg-gray-50 p-8 rounded-lg hover:shadow-lg transition">
                    <div class="w-16 h-16 bg-primary-700 bg-opacity-10 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-shield-alt text-primary-700 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Sécurité</h3>
                    <p class="text-gray-600">Vos données sont protégées par des normes de sécurité de niveau bancaire et des sauvegardes automatiques.</p>
                </div>
                <div class="bg-gray-50 p-8 rounded-lg hover:shadow-lg transition">
                    <div class="w-16 h-16 bg-primary-700 bg-opacity-10 rounded-full flex items-center justify-center mb-6">
                        <i class="fas fa-sync-alt text-primary-700 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Flexibilité</h3>
                    <p class="text-gray-600">Adaptez l'outil à vos besoins spécifiques grâce à des modules personnalisables et une API ouverte.</p>
                </div>
            </div>
        </div>
    </section>



    <!-- Contact Section -->
    <section id="contact" class="py-20 bg-gray-50">
        <div class="container mx-auto px-6">
            <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-md overflow-hidden">
                <div class="md:flex">
                    <div class="md:w-1/2 bg-primary-700 p-10 text-white">
                        <h2 class="text-2xl font-bold mb-6">Contactez-nous</h2>
                        <p class="mb-6">Vous avez des questions ou besoin d'une démonstration personnalisée ? Notre équipe est à votre disposition.</p>
                        <div class="mb-6">
                            <h3 class="font-bold mb-2"><i class="fas fa-phone-alt mr-2"></i> Téléphone</h3>
                            <p>+33 1 23 45 67 89</p>
                        </div>
                        <div class="mb-6">
                            <h3 class="font-bold mb-2"><i class="fas fa-envelope mr-2"></i> Email</h3>
                            <p>contact@Depensio.com</p>
                        </div>
                        <div>
                            <h3 class="font-bold mb-2"><i class="fas fa-map-marker-alt mr-2"></i> Adresse</h3>
                            <p>123 Rue des Solutions, 75000 Paris, France</p>
                        </div>
                    </div>
                    <div class="md:w-1/2 p-10">
                        <form>
                            <div class="mb-4">
                                <label for="name" class="block text-gray-700 font-medium mb-2">Nom complet</label>
                                <input type="text" id="name" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                            </div>
                            <div class="mb-4">
                                <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                                <input type="email" id="email" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                            </div>
                            <div class="mb-4">
                                <label for="subject" class="block text-gray-700 font-medium mb-2">Sujet</label>
                                <select id="subject" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                                    <option>Demande d'information</option>
                                    <option>Support technique</option>
                                    <option>Demande de démo</option>
                                    <option>Autre</option>
                                </select>
                            </div>
                            <div class="mb-6">
                                <label for="message" class="block text-gray-700 font-medium mb-2">Message</label>
                                <textarea id="message" rows="4" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
                            </div>
                            <button type="submit" class="w-full px-4 py-2 bg-primary-700 text-white font-medium rounded-md hover:bg-opacity-90 transition">Envoyer le message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Chatbot Icon -->
    <div class="chatbot-icon" id="chatbotIcon" aria-label="Ouvrir le chat d'assistance" role="button" tabindex="0">
        <i class="fas fa-comment-dots text-white text-2xl"></i>
    </div>

    <!-- Chatbot Modal -->
    <div id="chatbotModal" class="hidden fixed bottom-24 right-8 w-80 bg-white rounded-xl shadow-xl overflow-hidden z-50">
        <div class="bg-primary-700 text-white p-4 flex justify-between items-center">
            <h3 class="font-semibold">Assistant virtuel</h3>
            <button id="closeChatbot" class="text-white hover:text-gray-200"><i class="fas fa-times"></i></button>
        </div>
        <div class="p-4 h-64 overflow-y-auto bg-gray-50" id="chatMessages">
            <div class="flex mb-4">
                <div class="w-8 h-8 bg-primary-700 rounded-full flex items-center justify-center text-white mr-3">A</div>
                <div class="bg-white p-3 rounded-lg shadow-sm max-w-xs">
                    <p class="text-gray-800">Bonjour! Comment puis-je vous aider aujourd'hui?</p>
                </div>
            </div>
        </div>
        <div class="p-4 border-t border-gray-200">
            <div class="flex">
                <input type="text" id="chatInput" placeholder="Tapez votre message..." class="flex-grow px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-primary">
                <button id="sendMessage" class="px-4 py-2 bg-primary-700 text-white rounded-r-lg hover:bg-primary-700/90 transition"><i class="fas fa-paper-plane"></i></button>
            </div>
        </div>
    </div>


@code {
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();
}
