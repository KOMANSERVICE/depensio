@page "/produit/{boutiqueId:guid}"
@using depensio.Shared.Pages.Boutique.Model
@using depensio.Shared.Pages.Produits.Components
@using depensio.Shared.Pages.Produits.Models
@inherits FlowbitePage
@layout MainLayout
@inject IProductService _productService

<PageTitle>Depensio - Gestion des produits</PageTitle>

<HeaderPage 
    Title="Gestion des produits"
    SubTitle="Créer, modifier ou supprimé vos produits"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex items-center">
            <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
            <select id="itemsPerPage" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option>10</option>
                <option>25</option>
                <option>50</option>
                <option>100</option>
            </select>
            <span class="ml-2 text-sm text-gray-600">éléments</span>
        </div>
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Rechercher un produit..."
                class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex gap-3">
            <button type="button" 
                @onclick="()=>{
                    onShowModal();
                }"
                class="bg-primary-700 hover:bg-amber-800 text-white px-4 py-2 rounded-md flex items-center justify-center gap-2 transition-colors">
                <i class="fas fa-plus"></i>
            </button>
            <button
                type="button" 
                class="border border-primary-700 text-primary-700 hover:bg-primary-700 hover:text-white px-3 py-2 rounded-md flex items-center justify-center transition-colors">
                <i class="fas fa-file-excel"></i>
            </button>
            <button
                type="button"
                class="border border-primary-700 text-primary-700 hover:bg-primary-700 hover:text-white px-3 py-2 rounded-md flex items-center justify-center transition-colors">
                <i class="fas fa-file-pdf"></i>
            </button>
        </div>
    </div>


    <!-- Desktop Table -->
    <div class="desktop-view bg-white rounded-lg overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-primary-700 text-white">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        <input type="checkbox" id="selectAll" class="rounded text-primary-700 focus:ring-primary-700">
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Produit</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Code barre</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Catégorie</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Prix d'achat</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Prix de vente</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Stock</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Actions</th>
                </tr>
            </thead>
            <tbody id="productsTableBody" class="bg-white divide-y divide-gray-200">
                @foreach(var Product in products)
                {
                    <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                            <input type="checkbox" class="product-checkbox rounded text-primary-700 focus:ring-primary-700" data-id=@($"checkbox-{Product.Id}")>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@Product.Name</div>
                            @* <div class="text-sm text-gray-500">@Product.D.substring(0, 30)${product.description.length > 30 ? '...' : ''}</div> *@
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @Product.Barcode
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-primary-700 bg-opacity-10 text-primary-700">category</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @Product.CostPrice FCFA
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @Product.Price FCFA
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm @(Product.Stock < 5 ? "text-red-600" : "text-gray-500")">@Product.Stock</span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <button type="button" 
                                @onclick="()=>{
                                    onShowModal(Product.Id);
                                }" 
                                class="edit-btn text-primary-700 hover:text-amber-800 mr-3" data-id="@Product.Id">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="delete-btn text-red-600 hover:text-red-800" data-id="@Product.Id">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
                       
            </tbody>
        </table>
    </div>

    <!-- Mobile Cards -->
    <div class="mobile-view">
        <div class="grid grid-cols-1 gap-4" id="mobileProductsList">
            @foreach (var product in products)
            {
                <div class="product-card bg-white rounded-lg shadow-md p-4">
                    <div class="flex justify-between items-start mb-2">
                        <div>
                            <h3 class="font-medium text-gray-900">@product.Name</h3>
                            <span class="text-xs px-2 py-1 rounded-full bg-primary-700 bg-opacity-10 text-primary-700">category</span>
                        </div>
                        <input type="checkbox" class="product-checkbox rounded text-primary-700 focus:ring-primary-700" data-id="@product.Id">
                    </div>
                    @*  <p class="text-sm text-gray-500 mb-3">${product.description.substring(0, 50)}${product.description.length > 50 ? '...' : ''}</p> *@
                    <p class="text-sm text-gray-500 mb-3">Description</p>
                    <div class="flex justify-between items-center">
                        <div>
                            <span class="font-medium">@product.Price FCFA</span>
                            <span class="text-xs ml-2 @(product.Stock < 5 ? "text-red-600" : "text-gray-500")">Stock: @product.Stock</span>
                        </div>
                        <div>
                            <button @onclick="()=>{
                                    onShowModal(product.Id);
                                }" class="edit-btn text-primary-700 hover:text-amber-800 mr-3" data-id="@product.Id">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="delete-btn text-red-600 hover:text-red-800" data-id="${product.id}">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center mt-4 pt-4 border-t border-gray-200">
        <div class="mb-4 md:mb-0">
            <button id="deleteSelectedBtn" class="text-red-600 hover:text-red-800 disabled:text-gray-400" disabled>
                <i class="fas fa-trash-alt"></i> Supprimer sélection
            </button>
        </div>
        <div class="text-sm text-gray-600 mb-4 md:mb-0">
            Affichage de 1 à 3 sur 3 éléments
        </div>
        <div class="flex items-center gap-1">
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">
                <i class="fas fa-angle-left"></i>
            </button>
            <button class="px-3 py-1 rounded bg-primary-700 text-white">1</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">2</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">3</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">
                <i class="fas fa-angle-right"></i>
            </button>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<Modal
    ShowModal="@showModal"
    OnCloseModal="()=>{
           onShowModal();
    }"
    ModalTitle="@modalTitle"
>
    <CreateProduitComponent 
        BoutiqueId="@boutiqueId"
        ProductId="@productId"
        product="@product"
        OnAfterSave="async ()=>{
            await GetProductsAsync();
            onShowModal();
        }" />
</Modal>
                


@code {
    [Parameter]
    public Guid boutiqueId { get; set; }
    private List<Product> products = new();
    private Product product = new();
    private bool showModal = false;
    private string modalTitle = "";
    private Guid productId = default;

    protected override async Task OnInitializedAsync()
    {
        await GetProductsAsync();

    }

    private async Task GetProductsAsync()
    {
        var productsResponse = await _productService.GetProductsByUserAsync(boutiqueId);
        products = productsResponse.Data.Products.ToList();
    }

    private void onShowModal(Guid Id = default)
    {
        productId = Id;
        if(productId != Guid.Empty)
        {
            modalTitle = "Modifier le produit";
            product = products.FirstOrDefault(p => p.Id == productId);
            
        }
        else
        {
            product = new();
            modalTitle = "Nouveau produit";
        }
        showModal = !showModal;
    }
}