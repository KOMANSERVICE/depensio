@code {
    [Parameter]
    public Guid boutiqueId { get; set; }
    private BaseResponse<GetProductByUserResponse> products;

    protected override async Task OnInitializedAsync()
    {
        products = await _productService.GetProductsByUserAsync(boutiqueId);

    }
}