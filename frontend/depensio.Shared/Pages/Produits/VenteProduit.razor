@page "/caisse/{boutiqueId:guid}"
@inject IProductService _productService
@inherits FlowbitePage
@layout MainLayout
@inject ISaleService _saleService;
@inject IBoutiqueSettingService _boutiqueSettingService
@inject ToastService ToastService
@inject IJSRuntime JSRuntime

<PageTitle>Depensio - Caisse</PageTitle>

<LoadingComponent IsLoad="@isLoad" />
<ToastContainer />
<EditForm EditContext="@editContext" OnValidSubmit="HandleCreateSale">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="flex-grow container mx-auto p-4 flex flex-col md:flex-row gap-6">
        <!-- Product Selection Section -->
        <div class="w-full md:w-3/5 bg-white rounded-lg shadow-md p-4">
            <div class="flex flex-col md:flex-row justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-primary-700 mb-4 md:mb-0">
                    <i class="fas fa-barcode mr-2"></i> Scanner/Rechercher produit
                </h2>
                <div class="relative w-full md:w-1/2">
                    <div class="flex items-center">
                        <input type="text" id="barcode-input" placeholder="Code barre ou nom du produit..."
                               class="flex-grow border rounded-l-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-amber-700">
                        <button type="button" class="bg-primary-700 text-white px-4 py-2 rounded-r-lg hover:bg-amber-700">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Scanner Simulation -->
            <div @onclick="StartScan" class="scanner-animation scan-animation border-2 border-dashed border-primary-700 rounded-lg p-8 text-center mb-4">
                <i class="fas fa-barcode text-4xl text-primary-700 mb-2"></i>
                <p class="text-gray-600">Présentez le code-barres du produit</p>
            </div>

            <!-- Product Categories -->
            <div class="mb-6">
                <h3 class="text-lg font-medium text-gray-700 mb-2 text-primary-700">Catégories</h3>
                <div class="flex flex-wrap gap-2">
                    <button type="button" class="bg-primary-700 text-white px-4 py-2 rounded-lg hover:bg-opacity-90 transition">Tous</button>
                    <button type="button" class="bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 transition">Alimentation</button>
                    <button type="button" class="bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 transition">Boissons</button>
                    <button type="button" class="bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 transition">Épicerie</button>
                    <button type="button" class="bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300 transition">Hygiène</button>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 max-h-[390px] overflow-y-auto">
                <!-- Product items would be dynamically added here -->
                @foreach (var prod in products.Data.Products)
                {
                    <div @onclick="() => showAddQuantityModal(prod.Id)"
                         class="product-item bg-white border border-gray-200 rounded-lg p-3 cursor-pointer hover:shadow-md transition"
                         data-id="@prod.Id" data-name="Pâtes Barilla" data-price="@prod.Price">
                        <div class="bg-gray-100 h-24 mb-2 rounded flex items-center justify-center">
                            <i class="fas fa-box-open text-3xl text-primary-700"></i>
                        </div>
                        <h4 class="font-medium text-gray-800 truncate">@prod.Name</h4>
                        <p class="text-primary-700 font-bold">@prod.Price FCFA</p>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <div class="flex justify-center mt-6">
                <nav class="inline-flex rounded-md shadow">
                    <button type="button" class="px-3 py-1 rounded-l-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button type="button" class="px-3 py-1 border-t border-b border-gray-300 bg-primary-700 text-white">
                        1
                    </button>
                    <button type="button"  class="px-3 py-1 border-t border-b border-gray-300 bg-white text-gray-500 hover:bg-gray-50">
                        2
                    </button>
                    <button type="button"  class="px-3 py-1 border-t border-b border-gray-300 bg-white text-gray-500 hover:bg-gray-50">
                        3
                    </button>
                    <button type="button" class="px-3 py-1 rounded-r-md border border-gray-300 bg-white text-gray-500 hover:bg-gray-50">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </nav>
            </div>
        </div>

        <!-- Cart Section -->
        <div class="w-full md:w-2/5 bg-white rounded-lg shadow-md p-4 flex flex-col">
            <h2 class="text-xl font-semibold text-primary-700 mb-4">
                <i class="fas fa-shopping-cart mr-2"></i> Panier
            </h2>

            <!-- Customer Info -->
            <div class="mb-4">
                <div class="flex justify-between items-center">
                    <span class="text-gray-600">Client:</span>
                    <button type="button" id="customer-btn" class="text-primary-700 hover:underline">Ajouter un client</button>
                </div>
                <div id="customer-info" class="hidden mt-2 p-2 bg-gray-50 rounded">
                    <!-- Customer info would appear here -->
                </div>
            </div>

            <!-- Cart Items -->
            <div class="flex-grow overflow-y-auto mb-4 border-b  max-h-[430px]">
                <table class="w-full">
                    <thead>
                        <tr class="sticky top-0 z-10 bg-white border-b text-gray-600 text-sm">
                            <th class="text-left pb-2">Produit</th>
                            <th class="text-right pb-2">Prix</th>
                            <th class="text-right pb-2">Qté</th>
                            <th class="text-right pb-2">Total</th>
                            <th class="pb-2"></th>
                        </tr>
                    </thead>
                    <tbody id="cart-items">
                        <!-- Cart items will be added here dynamically -->
                        @if (sale.Items.Count < 1)
                        {
                            <tr class="text-sm">
                                <td colspan="5" class="py-8 text-center text-gray-500">
                                    <i class="fas fa-shopping-cart text-3xl mb-2 text-gray-300"></i>
                                    <p>Aucun produit ajouté</p>
                                </td>
                            </tr>
                        }

                        @foreach (var item in sale.Items)
                        {
                            <tr class="text-sm">
                                <td class="py-3">
                                    @(products.Data.Products.FirstOrDefault(p => p.Id == @item.ProductId).Name ?? "")
                                    <p class="text-[10px] text-gray-500"> @(products.Data.Products.FirstOrDefault(p => p.Id == @item.ProductId).Barcode ?? "")</p>
                                </td>
                                <td class="py-3 text-right">@item.Price FCFA</td>
                                <td class="py-3 text-right">@item.Quantity</td>
                                <td class="py-3 text-right">@(item.Quantity* item.Price)  FCFA</td>
                                <td class="py-3 text-center">
                                    <button type="button" @onclick="() => { RemoveItem(item);}" class="remove-item text-red-500 hover:text-red-700" data-id="@item.Id">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Totals -->
            <div class="mb-4">
                <div class="flex justify-between py-2">
                    <span class="font-medium">Sous-total:</span>
                    <span id="subtotal" class="font-medium">@sale.TotalPrice FCFA</span>
                </div>
                @* <div class="flex justify-between py-2">
                    <span class="font-medium">TVA:</span>
                    <span id="tax" class="font-medium">0.00€</span>
                </div> *@
                <div class="flex justify-between py-2 border-t border-b border-gray-200">
                    <span class="font-bold">Total:</span>
                    <span id="total" class="font-bold text-primary-700 text-xl">@sale.TotalPrice FCFA</span>
                </div>
            </div>

            <!-- Payment Options -->
            <div class="mb-4">
                <h3 class="font-medium text-gray-700 mb-2 text-primary-700 ">Moyen de paiement</h3>
                <div class="grid grid-cols-3 gap-2">
                    <button type="button" class="payment-btn bg-gray-100   p-2 rounded hover:bg-primary-500 transition" data-method="cash">
                        <i class="fas fa-money-bill-wave mr-1 text-primary-700"></i> Espèces
                    </button>
                    <button type="button" class="payment-btn bg-gray-100 p-2 rounded hover:bg-primary-500 transition" data-method="card">
                        <i class="fas fa-credit-card mr-1 text-primary-700"></i> Carte
                    </button>
                    <button type="button" class="payment-btn bg-gray-100  p-2 rounded hover:bg-primary-500 transition" data-method="check">
                        <i class="fas fa-mobile-alt text-primary-700"></i>
                        Mobile
                    </button>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="grid grid-cols-2 gap-3">
                <button type="button" @onclick="Cancel" id="cancel-btn" class="bg-gray-200 text-gray-800 p-3 rounded-lg font-medium hover:bg-gray-300 transition">
                    <i class="fas fa-times mr-2"></i> Annuler
                </button>
                <button type="submit" id="pay-btn" class="bg-primary-700 text-white p-3 rounded-lg font-medium hover:bg-opacity-90 transition disabled:opacity-50" disabled="@(sale.TotalPrice < 1)">
                    <i class="fas fa-check mr-2"></i> Valider (@sale.TotalPrice FCFA)
                </button>
            </div>
        </div>
    </div>

    @if (saleItem != null)
    {
        <!-- Quantity Modal -->
        <div id="quantity-modal" class="@showModal(quantityModalVisible)">
            <div class="bg-white rounded-lg p-6 w-80">
                <h3 class="text-lg font-semibold text-primary-700 mb-4" id="modal-product-name">@getProductName(saleItem.ProductId)</h3>
                <div class="flex items-center justify-between mb-6">
                    <button type="button" id="decrement-qty" class="bg-gray-200 w-10 h-10 rounded-full text-xl flex items-center justify-center hover:bg-gray-300">-</button>
                    <input @bind="saleItem.Quantity" type="number" name="quatite" id="quatite"  class="w-20 text-center border-b-2 border-primary-700 text-xl font-bold focus:outline-none">
                    <button type="button" id="increment-qty" class="bg-gray-200 w-10 h-10 rounded-full text-xl flex items-center justify-center hover:bg-gray-300">+</button>
                </div>
                @if (displayPrixVente)
                {

                    <div class="mb-4  mb-6">
                        <label class="block text-gray-700 mb-2">Prix de vente:</label>
                        <input @bind="saleItem.Price" type="text" name="price" id="price" class="w-full p-2 border border-gray-300 rounded font-bold text-xl">
                    </div>
                }
    
                <div class="flex gap-3">
                    <button type="button" @onclick="closeAddQuantityModal" class="flex-grow bg-gray-200 text-gray-800 p-2 rounded hover:bg-gray-300">Annuler</button>
                    <button type="button" @onclick="AddItem" class="flex-grow bg-primary-700 text-white p-2 rounded hover:bg-opacity-90">Ajouter</button>
                </div>
            </div>
        </div>

    }

</EditForm>


<!-- Add User Modal -->
<Modal
    ShowModal="@showModalCodeQR"
    OnCloseModal="()=>{
           StopScan();
    }"
    ModalTitle="Scanne code barre produit"
>
    <div class="p-6">
        <video id="qr-video"  class="w-full h-full" style="border:1px solid #ccc"></video>

        @if (!string.IsNullOrEmpty(ScannedCode))
        {
            <p class="mt-3 text-green-600 font-bold">✅ Code détecté : @ScannedCode</p>
        }
    </div>    

</Modal>
          

@code {
    [Parameter]
    public Guid BoutiqueId { get; set; }

    private BaseResponse<GetProductByUserResponse> products;

    private bool isLoad = false;
    private bool quantityModalVisible = false;
    private Sale sale = new();
    private SaleItem saleItem = new();
    private ErrorMessage errorMessage = new();

    private EditContext editContext;
    private ValidationMessageStore messageStore;

    private bool displayPrixVente = false;

    private string ScannedCode { get; set; }

    private bool showModalCodeQR = false;

    protected override async Task OnInitializedAsync()
    {
        editContext = new EditContext(sale);
        messageStore = new ValidationMessageStore(editContext);

        editContext.OnValidationRequested += (s, e) => messageStore.Clear();
        editContext.OnFieldChanged += (s, e) => messageStore.Clear(e.FieldIdentifier);
        products = await _productService.GetProductByBoutiqueWithStockSetting(BoutiqueId);

        var setting = await _boutiqueSettingService.GetSettingByBoutique(BoutiqueId, BoutiqueSettingKeys.VENTE_KEY);
        var result = JsonSerializer.Deserialize<List<BoutiqueSettingValue>>(setting.Data.Settings.Value);
        var settingSaisiePrix = result?.FirstOrDefault(x => x.Id == BoutiqueSettingKeys.VENTE_AUTORISER_MODIFICATION_PRIX);
        displayPrixVente = BoolHelper.ToBool(settingSaisiePrix?.Value.ToString());
    }

    private async Task HandleCreateSale()
    {
        isLoad = true;
        try
        {
            sale.BoutiqueId = BoutiqueId; // Set the boutique ID for the product
            var result = await _saleService.CreateSaleAsync(new CreateSaleRequest(sale));
            if (result.Success)
            {
                messageStore.Clear();
                editContext.NotifyValidationStateChanged();
                sale = new(); // Reset the boutique object
                ShowSuccess();
                products = await _productService.GetProductByBoutiqueWithStockSetting(BoutiqueId);
            }

        }
        catch (ApiException ex)
        {
            try
            {
                var errorResult = JsonSerializer.Deserialize<ErrorMessage>(ex.Content, new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });

                if (!string.IsNullOrWhiteSpace(errorResult?.Detail))
                {
                    ShowError(errorResult.Detail);
                    // messageStore.Add(new FieldIdentifier(sale, string.Empty), errorResult.Detail);
                    // editContext.NotifyValidationStateChanged();
                }
            }
            catch
            {

                ShowError("Une erreur est survenue.");
                // messageStore.Add(new FieldIdentifier(sale, string.Empty), "Une erreur est survenue.");
                // editContext.NotifyValidationStateChanged();
            }

        }
        finally
        {
            isLoad = false;
        }
    }

    private void RemoveItem(SaleItem item)
    {
        sale.Items.Remove(item);
        TotalPriceSale();
    }

    private void TotalPriceSale()
    {
        sale.TotalPrice = sale.Items.Sum(x => x.Price * x.Quantity);
        saleItem.ProductId = Guid.Empty;
        saleItem = new();
    }

    private void AddItem()
    {
        if (saleItem.ProductId == Guid.Empty || saleItem.Quantity <= 0 || saleItem.Price <= 0)
            return;

        var alreadyExists = sale.Items.FirstOrDefault(i => i.ProductId == saleItem.ProductId);

        if (alreadyExists != null)
        {
            alreadyExists.Quantity += saleItem.Quantity;
            alreadyExists.Price = saleItem.Price;

        }
        else
        {

            sale.Items.Add(new()
            {
                ProductId = saleItem.ProductId,
                Price = saleItem.Price,
                Quantity = saleItem.Quantity
            });
        }

        TotalPriceSale();

        closeAddQuantityModal();
    }


    private void showAddQuantityModal(Guid productId)
    {
        quantityModalVisible = true;

        saleItem.ProductId = productId;
        var selectedProduct = products.Data.Products.FirstOrDefault(p => p.Id == productId);
        if (selectedProduct is not null)
        {
            saleItem.Price = selectedProduct.Price;
            saleItem.Quantity = 1;
        }
    }

    private void closeAddQuantityModal()
    {
        quantityModalVisible = false;
    }

    private string showModal(bool show) =>
    show
        ? "fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
        : "fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50";


    private string getProductName(Guid productId)
    {
        var product = products.Data.Products.FirstOrDefault(p => p.Id == productId);
        return product?.Name ?? "";
    }

    private void Cancel()
    {
        sale = new();
    }

    private void ShowSuccess()
    {
        ToastService.ShowToast("Succès", "Enregistré avec succès", "success");
    }

    private void ShowError(string message)
    {
        ToastService.ShowToast("Erreur", message, "error");
    }


    [JSInvokable]
    public void OnQrCodeScanned(string code)
    {
        if (!string.IsNullOrEmpty(code))
        {
            ScannedCode = code;
        }
        else
        {
            ScannedCode = "Aucun QR code détecté ❌";
        }

        StateHasChanged();
    }

    private async Task StartScan()
    {
        onShowModalCodeQr();
        var dotnetRef = DotNetObjectReference.Create(this);
        await JSRuntime.InvokeVoidAsync("qrScanner.start", dotnetRef);

    }
    private async Task StopScan()
    {
        onShowModalCodeQr();
        await JSRuntime.InvokeVoidAsync("qrScanner.stop");
    }


    public async ValueTask DisposeAsync()
    {
        await StopScan();
    }

    private void onShowModalCodeQr()
    {
        showModalCodeQR = !showModalCodeQR;
    }

}