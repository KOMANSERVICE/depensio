@page "/liste-user/{boutiqueId:guid}"
@using depensio.Shared.Pages.Boutique.Model
@using depensio.Shared.Pages.Produits.Components
@using depensio.Shared.Pages.Produits.Models
@layout MainLayout
@inject IAuthUserService _authUserService
@inject IJSRuntime JS

<PageTitleComponent Title="Gestion des utilisateurs" />

<HeaderPage 
    Title="Gestion des utilisateurs"
    SubTitle="Ajoutez vos utilisateurs et accordez-leur des droits"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex items-center">
            <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
            <select id="itemsPerPage" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option>10</option>
                <option>25</option>
                <option>50</option>
                <option>100</option>
            </select>
            <span class="ml-2 text-sm text-gray-600">éléments</span>
        </div>
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Rechercher un utilisateur..."
                class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex gap-3">
            <button type="button" 
                @onclick="()=>{
                    onShowModal();
                }"
                class="bg-primary-700 hover:bg-amber-800 text-white px-4 py-2 rounded-md flex items-center justify-center gap-2 transition-colors">
                <i class="fas fa-plus"></i>
            </button>
           @*  <button
                type="button" 
                @onclick="onShowPrintModal"
                class="border border-primary-700 text-primary-700 hover:bg-primary-700 hover:text-white px-3 py-2 rounded-md flex items-center justify-center transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 4v3H4a2 2 0 00-2 2v3a2 2 0 002 2h1v2a2 2 0 002 2h6a2 2 0 002-2v-2h1a2 2 0 002-2V9a2 2 0 00-2-2h-1V4a2 2 0 00-2-2H7a2 2 0 00-2 2zm8 0H7v3h6V4zm0 8H7v4h6v-4z" clip-rule="evenodd" />
                </svg>            
            </button> *@
        </div>
    </div>


    <!-- Desktop Table -->
    <div class="desktop-view bg-white rounded-lg overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-primary-700 text-white">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        <input type="checkbox" id="selectAll" class="rounded text-primary-700 focus:ring-primary-700">
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Email</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Nom</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Prénom</th>                    
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                        Actions</th>
                </tr>
            </thead>
            <tbody id="usersTableBody" class="bg-white divide-y divide-gray-200">
                @foreach(var user in users)
                {
                    <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                            <input type="checkbox" class="user-checkbox rounded text-primary-700 focus:ring-primary-700" data-id=@($"checkbox-{user.Email}")>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@user.Email</div>
                            @* <div class="text-sm text-gray-500">@user.D.substring(0, 30)${user.description.length > 30 ? '...' : ''}</div> *@
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @user.LastName
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            @user.FirstName
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <button type="button" 
                                class="edit-btn text-primary-700 hover:text-amber-800 mr-3" data-id="@user.Email">
                                <i class="fas fa-edit"></i>
                            </button>
                           @*  <button class="delete-btn text-red-600 hover:text-red-800" data-id="@user.Id">
                                <i class="fas fa-trash-alt"></i>
                            </button> *@
                        </td>
                    </tr>
                }
                       
            </tbody>
        </table>
    </div>

    <!-- Mobile Cards -->
    <div class="mobile-view">
        <div class="grid grid-cols-1 gap-4" id="mobileUsersList">
            @foreach (var user in users)
            {
                <div class="user-card bg-white rounded-lg shadow-md p-4">
                    <div class="flex justify-between items-start mb-2">
                        <div>
                            <h3 class="font-medium text-gray-900">@user.Email</h3>
                            <span class="text-xs px-2 py-1 rounded-full bg-primary-700 bg-opacity-10 text-primary-700">category</span>
                        </div>
                        <input type="checkbox" class="user-checkbox rounded text-primary-700 focus:ring-primary-700" data-id="@user.Email">
                    </div>
                    @*  <p class="text-sm text-gray-500 mb-3">${user.description.substring(0, 50)}${user.description.length > 50 ? '...' : ''}</p> *@
                    <p class="text-sm text-gray-500 mb-3">Description</p>
                    <div class="flex justify-between items-center">
                        <div>
                            <span class="font-medium">Nom: @user.LastName</span>
                            <span class="text-xs ml-2">Prénom: @user.FirstName</span>
                        </div>
                        <div>
                            <button type="button"
                                class="edit-btn text-primary-700 hover:text-amber-800 mr-3" data-id="@user.Email">
                                <i class="fas fa-edit"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center mt-4 pt-4 border-t border-gray-200">
        <div class="mb-4 md:mb-0">
            <button id="deleteSelectedBtn" class="text-red-600 hover:text-red-800 disabled:text-gray-400" disabled>
                <i class="fas fa-trash-alt"></i> Supprimer sélection
            </button>
        </div>
        <div class="text-sm text-gray-600 mb-4 md:mb-0">
            Affichage de 1 à 3 sur 3 éléments
        </div>
        <div class="flex items-center gap-1">
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">
                <i class="fas fa-angle-left"></i>
            </button>
            <button class="px-3 py-1 rounded bg-primary-700 text-white">1</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">2</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">3</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">
                <i class="fas fa-angle-right"></i>
            </button>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<Modal
    ShowModal="@showModal"
    OnCloseModal="()=>{
           onShowModal();
    }"
    ModalTitle="@modalTitle"
>
    <CreateUserComponent 
        BoutiqueId="@boutiqueId"
        Email="@Email"
        user="@user"
        OnAfterSave="async ()=>{
            await GetUsersAsync();
            onShowModal();
        }" />
</Modal>

@code {
    [Parameter]
    public Guid boutiqueId { get; set; }
    private List<SignUpBoutiqueDTO> users = new();
    private SignUpBoutiqueDTO user = new();
    private bool showModal = false;
    private string modalTitle = "";
    private string Email = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await GetUsersAsync();

    }

    private async Task GetUsersAsync()
    {
        var usersResponse = await _authUserService.GetListeUser(boutiqueId);
        users = usersResponse.Data.ListeUsers.ToList();

        StateHasChanged();
        await Task.Delay(1000);
    }

    private void onShowModal(string email = "")
    {
        Email = email;
        if(Email != "")
        {
            modalTitle = "Modifier le produit";
            user = users.FirstOrDefault(p => p.Email == Email);
            
        }
        else
        {
            user = new();
            modalTitle = "Nouvel utilisateur";
        }
        showModal = !showModal;
    }  
    
}