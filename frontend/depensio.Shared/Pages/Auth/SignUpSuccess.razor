@page "/signupsuccess"
@inherits FlowbitePage

@layout NoContentLayout

<section class="bg-gradient-to-r from-primary-700/10 to-primary-700/5 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg overflow-hidden">
        <!-- Header -->
        <div class="bg-primary-700 py-6 px-8 text-center">
            <h1 class="text-2xl font-bold text-white">Félicitations !</h1>
        </div>

        <!-- Content -->
        <div class="p-8">
            <div class="text-center mb-8">
                <div class="inline-block mb-6">
                    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4 animation-pulse">
                        <i class="fas fa-check-circle text-green-500 text-4xl"></i>
                    </div>
                </div>

                <h2 class="text-xl font-semibold text-gray-800 mb-2">Votre compte a été créé avec succès</h2>
                <p class="text-gray-600 mb-6">Nous avons envoyé un email de confirmation à votre adresse. Veuillez vérifier votre boîte de réception.</p>

                <div class="bg-yellow-50 border-l-4 border-primary-700 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-info-circle text-primary-700"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-gray-700">Si vous ne recevez pas l'email, vérifiez votre dossier spam ou <a href="#" class="font-medium text-primary-700 underline">renvoyer l'email</a>.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-4">
                <NavLink href="/" class="w-full flex items-center justify-center px-4 py-3 bg-primary-700 text-white rounded-lg hover:bg-opacity-90 transition duration-300">
                    <i class="fas fa-home mr-2"></i>
                    Retour à l'accueil
                </NavLink>

                <NavLink href="/login" class="w-full flex items-center justify-center px-4 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition duration-300">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    Se connecter
                </NavLink>
            </div>
        </div>

        <!-- Footer -->
        <div class="bg-gray-50 px-8 py-4 text-center">
            <p class="text-sm text-gray-500">Besoin d'aide ? <a href="#" class="font-medium text-primary-700">Contactez notre support</a></p>
        </div>
    </div>

</section>


