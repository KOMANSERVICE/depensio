@page "/profile/{boutiqueId:guid}"
@using depensio.Shared.Pages.Boutique.Model
@using depensio.Shared.Pages.Profiles.Components
@using depensio.Shared.Pages.Produits.Models
@inherits FlowbitePage
@layout MainLayout
@inject IProfileService _profileService
@inject IMenuService _menuService
@inject IJSRuntime JS

<PageTitleComponent Title="Gestion des profils" />

<HeaderPage 
    Title="Gestion des profils"
    SubTitle="Créer, modifier vos profils"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex items-center">
            <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
            <select id="itemsPerPage" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option>10</option>
                <option>25</option>
                <option>50</option>
                <option>100</option>
            </select>
            <span class="ml-2 text-sm text-gray-600">éléments</span>
        </div>
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Rechercher un produit..."
                class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex gap-3">
            <button type="button" 
                @onclick="()=>{
                    onShowModal();
                }"
                class="bg-primary-700 hover:bg-amber-800 text-white px-4 py-2 rounded-md flex items-center justify-center gap-2 transition-colors">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>


    <!-- Desktop Table -->
    <div class="desktop-view bg-white rounded-lg overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-primary-700 text-white">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        <input type="checkbox" id="selectAll" class="rounded text-primary-700 focus:ring-primary-700">
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Name</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Actif</th>
                  
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                        Actions</th>
                </tr>
            </thead>
            <tbody id="profilesTableBody" class="bg-white divide-y divide-gray-200">
                @foreach(var Profile in profiles)
                {
                    <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                            <input type="checkbox" class="profile-checkbox rounded text-primary-700 focus:ring-primary-700" data-id=@($"checkbox-{Profile.Id}")>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@Profile.Name</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                              @if (Profile.IsActive)
                              {
                                  <svg class="w-6 h-6 text-green-900 dark:text-green-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                  </svg>
                              }
                              else
                              {
                                  <svg class="w-6 h-6 text-red-900 dark:text-red-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                  </svg>
                              }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                          @*   <button type="button" 
                                @onclick="()=>{
                                    onShowModal(Profile.Id);
                                }" 
                                class="edit-btn text-primary-700 hover:text-amber-800 mr-3" data-id="@Profile.Id">
                                <i class="fas fa-edit"></i>
                            </button> *@
                        </td>
                    </tr>
                }
                       
            </tbody>
        </table>
    </div>

    <!-- Mobile Cards -->
    <div class="mobile-view">
        <div class="grid grid-cols-1 gap-4" id="mobileProfilesList">
            @foreach (var profile in profiles)
            {
                <div class="profile-card bg-white rounded-lg shadow-md p-4">
                    <div class="flex justify-between items-start mb-2">
                        <div>
                            <h3 class="font-medium text-gray-900">@profile.Name</h3>
                        </div>
                        <input type="checkbox" class="profile-checkbox rounded text-primary-700 focus:ring-primary-700" data-id="@profile.Id">
                    </div>
                    <p class="text-sm text-gray-500 mb-3">Description</p>
                    <div class="flex justify-between items-center">
                        <div>
                             @if (profile.IsActive)
                              {
                                  <svg class="w-6 h-6 text-green-900 dark:text-green-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                  </svg>
                              }
                              else
                              {
                                  <svg class="w-6 h-6 text-red-900 dark:text-red-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                  </svg>
                              }
                        </div>
                        @* <div>
                            <button @onclick="()=>{
                                    onShowModal(profile.Id);
                                }" class="edit-btn text-primary-700 hover:text-amber-800 mr-3" data-id="@profile.Id">
                                <i class="fas fa-edit"></i>
                            </button>
                        </div> *@
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center mt-4 pt-4 border-t border-gray-200">
        <div class="mb-4 md:mb-0">
            <button id="deleteSelectedBtn" class="text-red-600 hover:text-red-800 disabled:text-gray-400" disabled>
                <i class="fas fa-trash-alt"></i> Supprimer sélection
            </button>
        </div>
        <div class="text-sm text-gray-600 mb-4 md:mb-0">
            Affichage de 1 à 3 sur 3 éléments
        </div>
        <div class="flex items-center gap-1">
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">
                <i class="fas fa-angle-left"></i>
            </button>
            <button class="px-3 py-1 rounded bg-primary-700 text-white">1</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">2</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">3</button>
            <button class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100">
                <i class="fas fa-angle-right"></i>
            </button>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<Modal
    ShowModal="@showModal"
    OnCloseModal="()=>{
           onShowModal();
    }"
    ModalTitle="@modalTitle"
>
    <CreateProfileComponent 
        BoutiqueId="@boutiqueId"
        menus="@menus"
        OnAfterSave="async ()=>{
            await GetProfilesAsync();
            onShowModal();
        }" />
</Modal>

<Modal
    ShowModal="@showPrintModal"
    OnCloseModal="()=>{
           onShowPrintModal();
    }"
    ModalTitle="Options d'impression"
>
     <div class="p-6">        
        <div class="space-y-4">
            <div class="flex items-center">
                <input type="checkbox" id="printWithInfo" checked class="h-4 w-4 text-primary-700 focus:ring-primary-700 border-gray-300 rounded">
                <label for="printWithInfo" class="ml-2 block text-sm text-gray-700">Afficher les informations du produit</label>
            </div>

            <div class="flex justify-end gap-3 pt-4">
                <button type="button" id="cancelPrintBtn" 
                    @onclick="onShowPrintModal"
                    class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors">
                    Annuler
                </button>
                <button type="button" id="confirmPrintBtn" @onclick="Print" 
                    class="px-4 py-2 bg-primary-700 text-white rounded-md hover:bg-[#6a460f] transition-colors">
                    Imprimer
                </button>
            </div>
        </div>
    </div>
</Modal>
      


@code {
    [Parameter]
    public Guid boutiqueId { get; set; }
    private List<Menu> menus = new();
    private List<Profile> profiles = new();
    private Profile profile = new();
    private bool showModal = false;
    private string modalTitle = "";
    private Guid profileId = default;
    private bool showPrintModal = false;

    protected override async Task OnInitializedAsync()
    {
        await GetProfilesAsync();
        await GetMenusAsync();

    }

    private async Task GetProfilesAsync()
    {
        var profilesResponse = await _profileService.GetProfileByBoutiqueAsync(boutiqueId);
        profiles = profilesResponse.Data.Profiles.ToList();

        StateHasChanged();
    }

    
    private async Task GetMenusAsync()
    {
        var menusResponse = await _menuService.GetMenuByBoutiqueAsync(boutiqueId);
        menus = menusResponse.Data.Menus.ToList();  

        StateHasChanged();
    }

    private void onShowModal(Guid Id = default)
    {
        profileId = Id;
        if(profileId != Guid.Empty)
        {
            modalTitle = "Modifier le produit";
            profile = profiles.FirstOrDefault(p => p.Id == profileId);
            
        }
        else
        {
            profile = new();
            modalTitle = "Nouveau produit";
        }
        showModal = !showModal;
    }
    
    private void onShowPrintModal()
    {
        showPrintModal = !showPrintModal;
    } 

    
    private async Task Print()
    {
        await JS.InvokeVoidAsync("printBlock", "printSection", new {                   
                    pageSize = "50mm 30mm",
                    margin = "0mm"
                });
    }

    private bool IsValidEan13(string barcode)
    {
        if (string.IsNullOrWhiteSpace(barcode) || barcode.Length != 13 || !barcode.All(char.IsDigit))
            return false;

        int sum = 0;
        for (int i = 0; i < 12; i++)
        {
            int digit = barcode[i] - '0';
            sum += (i % 2 == 0) ? digit : digit * 3;
        }
        int checkDigit = (10 - (sum % 10)) % 10;
        return checkDigit == (barcode[12] - '0');
    }
}