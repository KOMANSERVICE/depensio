@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider

<header class="@HeaderClass">
    <nav class="max-w-screen-xl px-6 sm:px-8 lg:px-16 mx-auto grid grid-flow-col py-3 sm:py-4">
        <div class="col-start-1 col-end-2 flex items-center">
            <img src="assets/Logo.svg" alt="Logo" class="h-8 w-auto" />
        </div>

        <!-- Desktop Navigation -->
        <ul class="hidden lg:flex col-start-4 col-end-8 text-black-500 items-center">
            @foreach (var link in NavLinks)
            {
                <li>
                    <a href="javascript:void(0)"
                       @onclick="() => ScrollToSection(link.Target)"
                       class="@GetNavLinkClass(link.Target)">
                        @link.Label
                    </a>
                </li>
            }
        </ul>


        <!-- Right Action Buttons -->
        <CascadingAuthenticationState>

        <AuthorizeView>
            <Authorized>
                <div class="col-start-10 col-end-12 font-medium flex justify-end items-center">
                    <NavLink href="login" class="text-black-600 mx-2 sm:mx-4 capitalize tracking-wide hover:text-orange-500 transition-all">
                        Log out
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="col-start-10 col-end-12 font-medium flex justify-end items-center">
                    <NavLink href="login" class="text-black-600 mx-2 sm:mx-4 capitalize tracking-wide hover:text-orange-500 transition-all">
                        Sign In
                    </NavLink>
                    <NavLink href="register" class="px-4 py-2 border border-orange-500 text-orange-500 rounded-lg hover:bg-orange-500 hover:text-white transition-all">
                        Sign Up
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
        </CascadingAuthenticationState>
    </nav>
</header>

<!-- Mobile Bottom Navigation -->
<nav class="fixed lg:hidden bottom-0 left-0 right-0 z-20 px-4 sm:px-8 shadow-t bg-white">
    <ul class="flex w-full justify-between items-center text-black-500 py-2">
        @foreach (var link in NavLinks)
        {
            <li class="mx-1 sm:mx-2 px-3 sm:px-4 py-2 flex flex-col items-center text-xs border-t-2 transition-all @GetMobileLinkClass(link.Target)">
                <a href="javascript:void(0)" @onclick="() => ScrollToSection(link.Target)">
                    <span class="w-6 h-6">@((MarkupString)link.Icon)</span>
                    @link.Label
                </a>
            </li>
        }
    </ul>
</nav>

@code {
    private string? ActiveLink = null;
    private bool ScrollActive = false;

    private List<(string Label, string Target, string Icon)> NavLinks = new()
    {
        ("About", "about", "<svg class='w-6 h-6' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'/></svg>"),
        ("Feature", "feature", "<svg class='w-6 h-6' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9'/></svg>"),
        ("Pricing", "pricing", "<svg class='w-6 h-6' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z'/></svg>"),
        ("Testimonial", "testimoni", "<svg class='w-6 h-6' fill='none' stroke='currentColor' viewBox='0 0 24 24'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z'/></svg>")
    };

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            //await JS.InvokeVoidAsync("addScrollListener");
        }
    }

    private async Task ScrollToSection(string id)
    {
        //await JS.InvokeVoidAsync("scrollToElementId", id);
        ActiveLink = id;
    }

    private string GetNavLinkClass(string id)
    {
        var baseClass = "px-4 py-2 mx-2 cursor-pointer inline-block relative transition-all";
        return ActiveLink == id
            ? $"{baseClass} text-orange-500"
            : $"{baseClass} text-black-500 hover:text-orange-500";
    }

    private string GetMobileLinkClass(string id)
    {
        return ActiveLink == id
            ? "border-orange-500 text-orange-500"
            : "border-transparent";
    }

    private string HeaderClass => $"fixed top-0 w-full z-30 transition-all bg-white {(ScrollActive ? "shadow-md pt-0" : "pt-4")}";
}

