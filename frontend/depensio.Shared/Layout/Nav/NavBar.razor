
<div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center">
            <div class="w-10 h-10 bg-primary-700 rounded-full flex items-center justify-center text-white font-bold text-xl">DP</div>
            <span class="ml-3 text-xl font-semibold text-gray-800"></span>
        </div>

        <AuthorizeView>
            <NotAuthorized>
                <!-- Navigation -->
                <nav class="hidden md:flex space-x-8">
                    <NavLink href="/#home" class="text-gray-600 hover:text-primary-700 transition">Acceuil</NavLink>
                    <NavLink href="/#features" class="text-gray-600 hover:text-primary-700 transition">Fonctionnalités</NavLink>
                    <NavLink href="/#pricing" class="text-gray-600 hover:text-primary-700 transition">Tarifs</NavLink>
                    <NavLink href="/#about" class="text-gray-600 hover:text-primary-700 transition">À propos</NavLink>
                    <NavLink href="/#contact" class="text-gray-600 hover:text-primary-700 transition">Contact</NavLink>
                </nav>
            </NotAuthorized>
        </AuthorizeView>

        <div class="flex items-center space-x-4">
            <AuthorizeView>
                <Authorized>
                    <NavIcon />
                </Authorized>
                <NotAuthorized>
                    <!-- Boutons -->
                    <NavLink href="login" class="px-4 py-2 text-primary-700 font-medium rounded-lg hover:bg-gray-100 transition">Connexion</NavLink>
                    <NavLink href="register" class="px-4 py-2 bg-primary-700 text-white font-medium rounded-lg hover:bg-primary/90 transition">Inscription</NavLink>

                </NotAuthorized>
            </AuthorizeView>
        </div>
        <AuthorizeView>
            <NotAuthorized>
                <!-- Menu mobile -->
                <button id="mobile-menu-button" class="md:hidden text-gray-600">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <!-- Menu mobile dropdown -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
        <NavLink href="/#home" class="text-gray-600 hover:text-primary-700 transition">Acceuil</NavLink>
        <NavLink href="/#features" class="block py-2 text-gray-600 hover:text-primary-700 transition">Fonctionnalités</NavLink>
        <NavLink href="/#pricing" class="block py-2 text-gray-600 hover:text-primary-700 transition">Tarifs</NavLink>
        <NavLink href="/#about" class="block py-2 text-gray-600 hover:text-primary-700 transition">À propos</NavLink>
        <NavLink href="/#contact" class="block py-2 text-gray-600 hover:text-primary-700 transition">Contact</NavLink>
