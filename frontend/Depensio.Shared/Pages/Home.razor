@page "/"
@using depensio.Shared.Services
@using depensio.Shared.Components
@inject NavigationManager Navigation
@inject IFormFactor FormFactor
@layout HomeLayout

<PageTitleComponent Title="Gestion des ventes, stocks et boutique en ligne" />

@* 
 *@
<!-- Hero Section -->
<section id="home" class="relative text-white bg-cover bg-center">
    <img 
        src="https://images.unsplash.com/photo-1497366754035-f200968a6e72?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" 
        alt="Transformez votre travail avec notre Depensio" 
        class="absolute inset-0 w-full h-full object-cover"
        fetchpriority="high"
        decoding="async"
    />
    <div class="w-full h-full flex items-center py-20 bg-black opacity-70">
        <div class="container mx-auto px-6 flex flex-col md:flex-row items-center justify-center">
            <div class="md:w-1/2 mb-10 md:mb-0">
                <h1 class="text-3xl md:text-3xl font-bold leading-tight mb-6">Transformez votre travail avec notre Depensio</h1>
                <p class="text-xl mb-8">L'outil tout-en-un pour optimiser votre productivité et simplifier vos processus métiers.</p>
                <div class="flex space-x-4">
                    <NavLink href="/register" class="px-8 py-3 bg-white text-primary-900 font-bold rounded-md border border-gray-300 hover:bg-gray-100 focus:ring-2 focus:ring-primary-700 transition">
                        Essai gratuit
                    </NavLink>
                    <NavLink href="https://share.synthesia.io/b4c2071a-f91b-46ab-ab8e-f5e92c7e5a0a" target="_blank" class="px-8 py-3 border-2 border-white text-white font-bold rounded-md hover:bg-white hover:text-primary-700 transition">Voir la présentation</NavLink>
                </div>
            </div>
            <div class="md:w-1/2 flex justify-center">
                <div class="relative w-full max-w-md">
                    <div class="absolute -top-6 -left-6 w-32 h-32 bg-yellow-200 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
                    <div class="absolute -bottom-8 -right-8 w-32 h-32 bg-primary-700 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
                    <div class="relative bg-white rounded-lg shadow-xl p-4">
                        <img 
                            src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=416&q=80" 
                            srcset="
                                https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=416&q=80 416w,
                                https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=832&q=80 832w,
                                https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80 1470w
                            "
                            sizes="(max-width: 768px) 100vw, 416px"
                            alt="Dashboard"
                            class="rounded-md"
                            loading="lazy"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<Features />

<!-- Pricing Section -->
<Pricing />


<!-- About Section -->
<AboutUs />

<!-- Contact Section -->
@* <ContactUs /> *@





@code {
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();

    protected override void OnInitialized()
    {
        if (!factor.Contains("web", StringComparison.OrdinalIgnoreCase))
        {
            Navigation.NavigateTo("/login");
        }
    }

}
