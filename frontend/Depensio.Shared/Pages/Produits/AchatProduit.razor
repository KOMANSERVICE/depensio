    }

    private async Task HandleCancelPurchase()
    {
        if (purchaseToCancel == null) return;
        if (!CanSubmitCancelRequest()) return;

        isCancelling = true;
        cancelErrorMessage = "";

        try
        {
            // Pour les achats non approuves, le motif est optionnel
            var reason = string.IsNullOrWhiteSpace(cancelReason) ? null : cancelReason;
            var request = new CancelPurchaseRequest(boutiqueId, reason);
            var result = await _purchaseService.CancelPurchaseAsync(purchaseToCancel.Id, request);

            if (result.Success)
            {
                // Refresh the list
                await GetPurchaseAsync();
                ApplyFilter();
                CloseCancelModal();
            }
            else
            {
                cancelErrorMessage = result.Message ?? "Une erreur est survenue lors de l'annulation.";
            }
        }
        catch (Refit.ApiException ex)
        {
            try
            {
                var errorResult = System.Text.Json.JsonSerializer.Deserialize<ErrorMessage>(ex.Content ?? "{}", new System.Text.Json.JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });
                cancelErrorMessage = errorResult?.Detail ?? ex.Message;
            }
            catch
            {
                cancelErrorMessage = "Une erreur est survenue lors de l'annulation.";
            }
        }
        catch (Exception ex)
        {
            cancelErrorMessage = ex.Message;
        }
        finally
        {
            isCancelling = false;
        }
    }
