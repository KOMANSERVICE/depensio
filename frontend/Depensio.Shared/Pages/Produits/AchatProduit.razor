    private bool CanCancelPurchase(Purchase purchase)
    {
        // US-PUR-008: Approved purchases can be cancelled
        // US-PUR-009: Draft, PendingApproval, and Rejected purchases can also be cancelled
        return purchase.Status == "approved" ||
               purchase.Status == "draft" ||
               purchase.Status == "pending_approval" ||
               purchase.Status == "rejected";
    }

    private bool IsApprovedPurchase(Purchase? purchase)
    {
        return purchase?.Status == "approved";
    }

    private bool CanSubmitCancelRequest()
    {
        if (purchaseToCancel == null) return false;

        // Pour un achat approuve, le motif est obligatoire (min 10 caracteres)
        if (IsApprovedPurchase(purchaseToCancel))
        {
            return !string.IsNullOrWhiteSpace(cancelReason) && cancelReason.Length >= 10;
        }

        // Pour les autres statuts (Draft, PendingApproval, Rejected), le motif est optionnel
        // Mais s'il est fourni, il doit faire au moins 10 caracteres
        if (!string.IsNullOrEmpty(cancelReason) && cancelReason.Length < 10)
        {
            return false;
        }

        return true;
    }

