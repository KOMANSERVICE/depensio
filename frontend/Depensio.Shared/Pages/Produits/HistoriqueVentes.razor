@page "/ventes/{boutiqueId:guid}"
@using depensio.Shared.Pages.Tresoreries.Models
@inject ISaleService _saleService
@inject IProductService _productService
@inject ITresorerieService _tresorerieService
@inherits FlowbitePage
@layout MainLayout
@inject ToastService ToastService

<PageTitleComponent Title="Historique des ventes" />

<HeaderPage
    Title="Historique des ventes"
    SubTitle="Consultez et gérez l'historique de vos ventes"/>

<LoadingComponent IsLoad="@isLoad" />
<ToastContainer />

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex items-center">
            <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
            <select id="itemsPerPage" @bind="itemsPerPage" @bind:after="OnItemsPerPageChanged" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <span class="ml-2 text-sm text-gray-600">éléments</span>
        </div>
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Rechercher une vente..."
                @bind="searchTerm"
                @bind:event="oninput"
                @bind:after="ApplyFilter"
                class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex gap-3">
            <select @bind="filterStatus" @bind:after="ApplyFilter"
                class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
                <option value="all">Toutes les ventes</option>
                <option value="validated">Validées uniquement</option>
                <option value="cancelled">Annulées uniquement</option>
            </select>
            <select @bind="filterTransfer" @bind:after="ApplyFilter"
                class="border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
                <option value="all">Tous les transferts</option>
                <option value="transferred">Transférées</option>
                <option value="not_transferred">Non transférées</option>
            </select>
        </div>
    </div>

    <!-- Desktop Table -->
    <div class="desktop-view bg-white rounded-lg overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-primary-700 text-white">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Date</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                        Articles</th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                        Total</th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider">
                        Statut</th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider">
                        Trésorerie</th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider">
                        Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (paginatedSales.Any())
                {
                    @foreach (var sale in paginatedSales)
                    {
                        <tr class="@(sale.IsCancelled ? "bg-red-50" : "")">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@sale.Date.ToLocalTime().ToString("dd/MM/yyyy")</div>
                                <div class="text-sm text-gray-500">@sale.Date.ToLocalTime().ToString("HH:mm")</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    @foreach (var item in sale.Items.Take(3))
                                    {
                                        <span class="text-sm text-gray-600">
                                            @(GetProductName(item.ProductId)) x @item.Quantity
                                        </span>
                                    }
                                    @if (sale.Items.Count > 3)
                                    {
                                        <span class="text-xs text-gray-400">+ @(sale.Items.Count - 3) autre(s)...</span>
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <span class="text-sm font-semibold text-gray-900">@sale.TotalPrice.ToString("N0") FCFA</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                @if (sale.IsCancelled)
                                {
                                    <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm">
                                        <i class="fas fa-times-circle mr-1"></i> Annulée
                                    </span>
                                    @if (!string.IsNullOrEmpty(sale.CancellationReason))
                                    {
                                        <IdrTooltip Text="@sale.CancellationReason">
                                            <p class="text-xs text-gray-500 mt-1 cursor-help">@TruncateText(sale.CancellationReason, 20)</p>
                                        </IdrTooltip>
                                    }
                                }
                                else
                                {
                                    <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">
                                        <i class="fas fa-check-circle mr-1"></i> Validée
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                @if (sale.IsTransferred)
                                {
                                    <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm">
                                        <i class="fas fa-check-circle mr-1"></i> Transférée
                                    </span>
                                }
                                else if (!sale.IsCancelled)
                                {
                                    <button type="button"
                                            @onclick="() => ShowTransferModal(sale)"
                                            class="bg-orange-500 text-white px-3 py-1 rounded hover:bg-orange-600 transition text-sm">
                                        <i class="fas fa-exchange-alt mr-1"></i> Transférer
                                    </button>
                                }
                                else
                                {
                                    <span class="text-gray-400 text-sm">-</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                <div class="flex justify-center gap-2">
                                    <button type="button"
                                            @onclick="() => ShowHistoryModal(sale)"
                                            class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition text-sm">
                                        <i class="fas fa-history mr-1"></i> Historique
                                    </button>
                                    @if (!sale.IsCancelled)
                                    {
                                        <button type="button"
                                                @onclick="() => ShowCancelModal(sale)"
                                                class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition text-sm">
                                            <i class="fas fa-ban mr-1"></i> Annuler
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 text-sm">
                                            Annulée le @(sale.CancelledAt?.ToLocalTime().ToString("dd/MM/yyyy HH:mm"))
                                        </span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <i class="fas fa-receipt text-6xl text-gray-300 mb-4"></i>
                            <p class="text-gray-500 text-lg">Aucune vente trouvée</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Cards -->
    <div class="mobile-view">
        <div class="grid grid-cols-1 gap-4">
            @if (paginatedSales.Any())
            {
                @foreach (var sale in paginatedSales)
                {
                    <div class="bg-white rounded-lg shadow-md p-4 @(sale.IsCancelled ? "border-l-4 border-red-500" : "border-l-4 border-green-500")">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <h3 class="font-medium text-gray-900">@sale.Date.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</h3>
                                @if (sale.IsCancelled)
                                {
                                    <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm">
                                        <i class="fas fa-times-circle mr-1"></i> Annulée
                                    </span>
                                }
                                else
                                {
                                    <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">
                                        <i class="fas fa-check-circle mr-1"></i> Validée
                                    </span>
                                }
                                @if (sale.IsTransferred)
                                {
                                    <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm ml-1">
                                        <i class="fas fa-check-circle mr-1"></i> Transférée
                                    </span>
                                }
                            </div>
                            <span class="font-semibold text-primary-700">@sale.TotalPrice.ToString("N0") FCFA</span>
                        </div>
                        <div class="text-sm text-gray-500 mb-3">
                            @foreach (var item in sale.Items.Take(2))
                            {
                                <div>@(GetProductName(item.ProductId)) x @item.Quantity</div>
                            }
                            @if (sale.Items.Count > 2)
                            {
                                <span class="text-xs text-gray-400">+ @(sale.Items.Count - 2) autre(s)...</span>
                            }
                        </div>
                        <div class="flex justify-end gap-2 flex-wrap">
                            <button type="button"
                                    @onclick="() => ShowHistoryModal(sale)"
                                    class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition text-sm">
                                <i class="fas fa-history mr-1"></i> Historique
                            </button>
                            @if (!sale.IsCancelled && !sale.IsTransferred)
                            {
                                <button type="button"
                                        @onclick="() => ShowTransferModal(sale)"
                                        class="bg-orange-500 text-white px-3 py-1 rounded hover:bg-orange-600 transition text-sm">
                                    <i class="fas fa-exchange-alt mr-1"></i> Transférer
                                </button>
                            }
                            @if (!sale.IsCancelled)
                            {
                                <button type="button"
                                        @onclick="() => ShowCancelModal(sale)"
                                        class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition text-sm">
                                    <i class="fas fa-ban mr-1"></i> Annuler
                                </button>
                            }
                            else if (!string.IsNullOrEmpty(sale.CancellationReason))
                            {
                                <IdrTooltip Text="@sale.CancellationReason">
                                    <span class="text-xs text-gray-500 block cursor-help">@TruncateText(sale.CancellationReason, 20)</span>
                                </IdrTooltip>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-12">
                    <i class="fas fa-receipt text-6xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500 text-lg">Aucune vente trouvée</p>
                </div>
            }
        </div>
    </div>

    <!-- Footer with pagination -->
    <div class="flex flex-col md:flex-row justify-between items-center mt-4 pt-4 border-t border-gray-200">
        <div class="mb-4 md:mb-0">
            <span class="text-sm text-gray-600">@filteredSales.Count vente(s)</span>
        </div>
        <div class="text-sm text-gray-600 mb-4 md:mb-0">
            Affichage de @StartIndex à @EndIndex sur @filteredSales.Count éléments
        </div>
        <div class="flex items-center gap-1">
            <button @onclick="GoToPreviousPage"
                    disabled="@(currentPage <= 1)"
                    class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                <i class="fas fa-angle-left"></i>
            </button>
            @for (int i = 1; i <= TotalPages; i++)
            {
                var pageNumber = i;
                <button @onclick="() => GoToPage(pageNumber)"
                        class="px-3 py-1 rounded @(currentPage == pageNumber ? "bg-primary-700 text-white" : "border border-gray-300 text-gray-600 hover:bg-gray-100")">
                    @pageNumber
                </button>
            }
            <button @onclick="GoToNextPage"
                    disabled="@(currentPage >= TotalPages)"
                    class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                <i class="fas fa-angle-right"></i>
            </button>
        </div>
    </div>
</div>

@if (showCancelModal && selectedSale != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 w-96 max-w-full mx-4">
            <h3 class="text-xl font-semibold text-red-600 mb-4">
                <i class="fas fa-exclamation-triangle mr-2"></i> Annuler la vente
            </h3>
            <p class="text-gray-600 mb-4">
                Etes-vous sur de vouloir annuler cette vente de <strong>@selectedSale.TotalPrice.ToString("N0") FCFA</strong> ?
            </p>
            <p class="text-sm text-gray-500 mb-4">
                Cette action va restaurer le stock des produits concernes.
            </p>
            <div class="mb-4">
                <label class="block text-gray-700 mb-2">Raison de l'annulation (optionnel):</label>
                <textarea @bind="cancellationReason"
                          rows="3"
                          maxlength="150"
                          placeholder="Ex: Erreur de saisie, retour client..."
                          class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-700"></textarea>
                <div class="text-xs text-gray-500 mt-1 text-right">@cancellationReason.Length / 150 caractères</div>
            </div>
            <div class="flex gap-3">
                <button type="button"
                        @onclick="CloseCancelModal"
                        class="flex-grow bg-gray-200 text-gray-800 p-2 rounded hover:bg-gray-300 transition">
                    <i class="fas fa-arrow-left mr-1"></i> Retour
                </button>
                <button type="button"
                        @onclick="ConfirmCancel"
                        disabled="@isCancelling"
                        class="flex-grow bg-red-500 text-white p-2 rounded hover:bg-red-600 transition disabled:opacity-50">
                    @if (isCancelling)
                    {
                        <i class="fas fa-spinner fa-spin mr-1"></i>
                    }
                    else
                    {
                        <i class="fas fa-ban mr-1"></i>
                    }
                    Confirmer
                </button>
            </div>
        </div>
    </div>
}

@if (showHistoryModal && historySale != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 w-full max-w-2xl mx-4 max-h-[90vh] overflow-y-auto">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-semibold text-blue-600">
                    <i class="fas fa-history mr-2"></i> Historique des statuts
                </h3>
                <button type="button"
                        @onclick="CloseHistoryModal"
                        class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <p class="text-gray-600 mb-4">
                Vente du <strong>@historySale.Date.ToLocalTime().ToString("dd/MM/yyyy")</strong> à <strong>@historySale.Date.ToLocalTime().ToString("HH:mm")</strong>
                - Total: <strong>@historySale.TotalPrice.ToString("N0") FCFA</strong>
            </p>

            @if (isLoadingHistory)
            {
                <div class="flex justify-center py-8">
                    <i class="fas fa-spinner fa-spin text-3xl text-blue-500"></i>
                </div>
            }
            else if (saleHistory.Any())
            {
                <div class="relative">
                    <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200"></div>
                    <div class="space-y-6">
                        @foreach (var entry in saleHistory)
                        {
                            <div class="relative flex items-start pl-10">
                                <div class="absolute left-2 w-5 h-5 rounded-full @GetStatusBgColor(entry.ToStatus) flex items-center justify-center">
                                    <i class="@GetStatusIcon(entry.ToStatus) text-white text-xs"></i>
                                </div>
                                <div class="bg-gray-50 rounded-lg p-4 flex-1 shadow-sm">
                                    <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-2">
                                        <div>
                                            <div class="flex items-center gap-2 flex-wrap">
                                                @if (!string.IsNullOrEmpty(entry.FromStatus))
                                                {
                                                    <span class="@GetStatusBadgeClass(entry.FromStatus) px-2 py-0.5 rounded text-xs">
                                                        @entry.FromStatus
                                                    </span>
                                                    <i class="fas fa-arrow-right text-gray-400 text-xs"></i>
                                                }
                                                <span class="@GetStatusBadgeClass(entry.ToStatus) px-2 py-0.5 rounded text-xs font-semibold">
                                                    @entry.ToStatus
                                                </span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(entry.Comment))
                                            {
                                                <p class="text-gray-600 text-sm mt-2">
                                                    <i class="fas fa-comment text-gray-400 mr-1"></i> @entry.Comment
                                                </p>
                                            }
                                        </div>
                                        <div class="text-right text-sm text-gray-500 whitespace-nowrap">
                                            <div><i class="fas fa-calendar mr-1"></i> @entry.Date.ToLocalTime().ToString("dd/MM/yyyy")</div>
                                            <div><i class="fas fa-clock mr-1"></i> @entry.Date.ToLocalTime().ToString("HH:mm:ss")</div>
                                            <div><i class="fas fa-user mr-1"></i> @entry.ChangedBy</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <i class="fas fa-info-circle text-4xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500">Aucun historique disponible pour cette vente.</p>
                </div>
            }

            <div class="flex justify-end mt-6">
                <button type="button"
                        @onclick="CloseHistoryModal"
                        class="bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300 transition">
                    <i class="fas fa-times mr-1"></i> Fermer
                </button>
            </div>
        </div>
    </div>
}

@if (showTransferModal && saleToTransfer != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4">
            <h3 class="text-xl font-semibold text-orange-600 mb-4">
                <i class="fas fa-exchange-alt mr-2"></i> Transférer à la trésorerie
            </h3>

            @if (!string.IsNullOrEmpty(transferErrorMessage))
            {
                <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle text-red-500 mr-2"></i>
                        <p class="text-red-700 text-sm">@transferErrorMessage</p>
                    </div>
                </div>
            }

            <div class="bg-gray-50 rounded-lg p-4 mb-4">
                <div class="grid grid-cols-2 gap-2 text-sm">
                    <div>
                        <span class="text-gray-500">Date:</span>
                        <span class="font-medium text-gray-900 ml-1">@saleToTransfer.Date.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div>
                        <span class="text-gray-500">Total:</span>
                        <span class="font-semibold text-primary-700 ml-1">@saleToTransfer.TotalPrice.ToString("N0") FCFA</span>
                    </div>
                </div>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700">
                        Mode de paiement <span class="text-red-500">*</span>
                    </label>
                    <select @bind="transferPaymentMethod"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5">
                        <option value="">Sélectionnez un mode</option>
                        <option value="CASH">Espèces</option>
                        <option value="CARD">Carte bancaire</option>
                        <option value="MOBILE_MONEY">Mobile Money</option>
                        <option value="BANK_TRANSFER">Virement bancaire</option>
                        <option value="CHECK">Chèque</option>
                        <option value="OTHER">Autre</option>
                    </select>
                </div>

                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700">
                        Compte <span class="text-red-500">*</span>
                    </label>
                    <select @bind="transferAccountId"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5">
                        <option value="">Sélectionnez un compte</option>
                        @foreach (var account in accounts.Where(a => a.IsActive))
                        {
                            <option value="@account.Id.ToString()">@account.Name (@GetAccountTypeName(account.Type))</option>
                        }
                    </select>
                </div>

                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700">
                        Catégorie <span class="text-red-500">*</span>
                    </label>
                    <select @bind="transferCategoryId"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5">
                        <option value="">Sélectionnez une catégorie</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id.ToString()">@category.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button type="button"
                        @onclick="CloseTransferModal"
                        disabled="@isTransferring"
                        class="flex-grow bg-gray-200 text-gray-800 p-2 rounded hover:bg-gray-300 transition">
                    <i class="fas fa-arrow-left mr-1"></i> Annuler
                </button>
                <button type="button"
                        @onclick="ConfirmTransfer"
                        disabled="@isTransferring"
                        class="flex-grow bg-orange-500 text-white p-2 rounded hover:bg-orange-600 transition disabled:opacity-50">
                    @if (isTransferring)
                    {
                        <i class="fas fa-spinner fa-spin mr-1"></i>
                    }
                    else
                    {
                        <i class="fas fa-exchange-alt mr-1"></i>
                    }
                    Transférer
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid BoutiqueId { get; set; }

    private List<Sale> sales = new();
    private List<Sale> filteredSales = new();
    private List<Product> products = new();
    private bool isLoad = false;
    private string filterStatus = "all";
    private string filterTransfer = "all";
    private string searchTerm = "";

    // Transfer modal
    private bool showTransferModal = false;
    private Sale? saleToTransfer = null;
    private bool isTransferring = false;
    private string transferErrorMessage = "";
    private string transferPaymentMethod = "";
    private string transferAccountId = "";
    private string transferCategoryId = "";

    // Treasury data
    private List<AccountListDto> accounts = new();
    private List<CategoryDTO> categories = new();

    // Pagination
    private int itemsPerPage = 10;
    private int currentPage = 1;

    private List<Sale> paginatedSales => filteredSales
        .Skip((currentPage - 1) * itemsPerPage)
        .Take(itemsPerPage)
        .ToList();

    private int TotalPages => (int)Math.Ceiling((double)filteredSales.Count / itemsPerPage);
    private int StartIndex => filteredSales.Count == 0 ? 0 : ((currentPage - 1) * itemsPerPage) + 1;
    private int EndIndex => Math.Min(currentPage * itemsPerPage, filteredSales.Count);

    private bool showCancelModal = false;
    private Sale? selectedSale = null;
    private string cancellationReason = "";
    private bool isCancelling = false;

    // History modal
    private bool showHistoryModal = false;
    private Sale? historySale = null;
    private List<SaleStatusHistoryDTO> saleHistory = new();
    private bool isLoadingHistory = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoad = true;
        try
        {
            var salesTask = _saleService.GetSaleByBoutiqueAsync(BoutiqueId);
            var productsTask = _productService.GetProductsByUserAsync(BoutiqueId);
            var accountsTask = _tresorerieService.GetAccountsAsync(BoutiqueId, false);
            var categoriesTask = _tresorerieService.GetCategoriesAsync(BoutiqueId, CategoryType.INCOME, false);

            await Task.WhenAll(salesTask, productsTask, accountsTask, categoriesTask);

            var salesResult = await salesTask;
            if (salesResult.Success)
            {
                sales = salesResult.Data.Sales.OrderByDescending(s => s.Date).ToList();
            }

            var productsResult = await productsTask;
            if (productsResult.Success)
            {
                products = productsResult.Data.Products.ToList();
            }

            var accountsResult = await accountsTask;
            if (accountsResult.Success && accountsResult.Data != null)
            {
                accounts = accountsResult.Data.Accounts.ToList();
            }

            var categoriesResult = await categoriesTask;
            if (categoriesResult.Success && categoriesResult.Data != null)
            {
                categories = categoriesResult.Data.Categories.ToList();
            }

            ApplyFilter();
        }
        catch (Exception)
        {
            ShowError("Erreur lors du chargement des ventes");
        }
        finally
        {
            isLoad = false;
        }
    }

    private void ApplyFilter()
    {
        var filtered = filterStatus switch
        {
            "validated" => sales.Where(s => !s.IsCancelled),
            "cancelled" => sales.Where(s => s.IsCancelled),
            _ => sales.AsEnumerable()
        };

        filtered = filterTransfer switch
        {
            "transferred" => filtered.Where(s => s.IsTransferred),
            "not_transferred" => filtered.Where(s => !s.IsTransferred),
            _ => filtered
        };

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var search = searchTerm.Trim().ToLower();
            filtered = filtered.Where(s =>
                s.Date.ToLocalTime().ToString("dd/MM/yyyy").Contains(search) ||
                s.Date.ToLocalTime().ToString("HH:mm").Contains(search) ||
                s.TotalPrice.ToString("N0").Contains(search) ||
                s.Items.Any(item => GetProductName(item.ProductId).ToLower().Contains(search))
            );
        }

        filteredSales = filtered.ToList();
        currentPage = 1;
    }

