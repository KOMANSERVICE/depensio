    private async Task ConfirmTransfer()
    {
        if (saleToTransfer == null) return;

        // Validation
        if (string.IsNullOrWhiteSpace(transferPaymentMethod))
        {
            transferErrorMessage = "Le mode de paiement est obligatoire.";
            return;
        }

        if (string.IsNullOrWhiteSpace(transferAccountId))
        {
            transferErrorMessage = "Le compte est obligatoire.";
            return;
        }

        if (string.IsNullOrWhiteSpace(transferCategoryId))
        {
            transferErrorMessage = "La catégorie est obligatoire.";
            return;
        }

        isTransferring = true;
        transferErrorMessage = "";

        try
        {
            var accountId = Guid.TryParse(transferAccountId, out var parsedAccountId) ? parsedAccountId : (Guid?)null;
            var request = new TransferSaleRequest(
                BoutiqueId,
                transferPaymentMethod,
                accountId,
                transferCategoryId
            );

            var result = await _saleService.TransferSaleAsync(saleToTransfer.Id, request);

            if (result.Success)
            {
                ShowSuccess("Vente transférée à la trésorerie avec succès");
                CloseTransferModal();
                await LoadData();
            }
            else
            {
                transferErrorMessage = result.Message ?? "Une erreur est survenue lors du transfert.";
            }
        }
        catch (ApiException ex)
        {
            try
            {
                var errorResult = JsonSerializer.Deserialize<ErrorMessage>(ex.Content, new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });
                transferErrorMessage = errorResult?.Detail ?? ex.Message;
            }
            catch
            {
                transferErrorMessage = "Une erreur est survenue lors du transfert.";
            }
        }
        catch (Exception ex)
        {
            transferErrorMessage = ex.Message;
        }
        finally
        {
            isTransferring = false;
        }
    }

