@code {
    [Parameter]
    public Guid BoutiqueId { get; set; }

    private List<Product> products = new();

    private bool isLoad = false;
    private bool quantityModalVisible = false;
    private Sale sale = new();
    private SaleItem saleItem = new();
    private ErrorMessage errorMessage = new();

    private EditContext editContext;
    private ValidationMessageStore messageStore;

    private bool displayPrixVente = false;

    private string ScannedCode { get; set; }

    private bool showModalCodeQR = false;

    // Treasury integration
    private bool _envoiAutomatiqueEnabled = false;
    private List<AccountListDto> accounts = new();

    // Variable temporaire pour l'AccountId (car select utilise string)
    private string selectedAccountId
    {
        get => sale.AccountId?.ToString() ?? string.Empty;
        set => sale.AccountId = string.IsNullOrEmpty(value) ? null : Guid.Parse(value);
    }

    protected override async Task OnInitializedAsync()
    {
        editContext = new EditContext(sale);
        messageStore = new ValidationMessageStore(editContext);

        editContext.OnValidationRequested += (s, e) => messageStore.Clear();
        editContext.OnFieldChanged += (s, e) => messageStore.Clear(e.FieldIdentifier);

        await GetProductsAsync();
        await LoadSettingsAsync();
    }

    private async Task LoadSettingsAsync()
    {
        try
        {
            var setting = await _boutiqueSettingService.GetSettingByBoutique(BoutiqueId, BoutiqueSettingKeys.VENTE_KEY);
            if (setting?.Data?.Settings?.Value is string json)
            {
                var result = JsonSerializer.Deserialize<List<BoutiqueSettingValue>>(json);

                var settingSaisiePrix = result?.FirstOrDefault(x => x.Id == BoutiqueSettingKeys.VENTE_AUTORISER_MODIFICATION_PRIX);
                displayPrixVente = BoolHelper.ToBool(settingSaisiePrix?.Value?.ToString() ?? "false");

                var settingEnvoiAuto = result?.FirstOrDefault(x => x.Id == BoutiqueSettingKeys.VENTE_ENVOI_AUTOMATIQUE_TRESORERIE);
                _envoiAutomatiqueEnabled = BoolHelper.ToBool(settingEnvoiAuto?.Value?.ToString() ?? "false");
            }

            // Load accounts only if treasury integration is enabled
            if (_envoiAutomatiqueEnabled)
            {
                await LoadAccountsAsync();
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Erreur lors du chargement des paramètres: {ex.Message}");
        }
    }

    private async Task LoadAccountsAsync()
    {
        try
        {
            var accountsResponse = await _tresorerieService.GetAccountsAsync(BoutiqueId, false);
            if (accountsResponse.Success && accountsResponse.Data != null)
            {
                accounts = accountsResponse.Data.Accounts.ToList();
            }
        }
        catch
        {
            accounts = new List<AccountListDto>();
        }
    }

    private void SelectPaymentMethod(string method)
    {
        sale.PaymentMethodId = method;
    }

    // Payment method constants
    private const string PAYMENT_CASH = "CASH";
    private const string PAYMENT_CARD = "CARD";
    private const string PAYMENT_MOBILE = "MOBILE_MONEY";

    private string GetAccountTypeName(AccountType type) => type switch
    {
        AccountType.Cash => "Espèces",
        AccountType.Bank => "Banque",
        AccountType.MobileMoney => "Mobile Money",
        AccountType.Other => "Autre",
        _ => type.ToString()
    };

    private string GetPaymentButtonClass(string method)
    {
        var isSelected = sale.PaymentMethodId == method;
        return isSelected
            ? "payment-btn p-2 rounded transition bg-primary-700 text-white"
            : "payment-btn p-2 rounded transition bg-gray-100 hover:bg-primary-500";
    }

    private string GetPaymentIconClass(string method)
    {
        var isSelected = sale.PaymentMethodId == method;
        return isSelected ? "" : "text-primary-700";
    }

    private async Task GetProductsAsync()
    {
        var prodResult = await _productService.GetProductByBoutiqueWithStockSetting(BoutiqueId);
        products = prodResult.Data.Products.ToList();
    }

    private async Task HandleCreateSale()
    {
        // Validation des champs obligatoires si l'envoi automatique est activé
        if (_envoiAutomatiqueEnabled)
        {
            messageStore.Clear();
            bool hasErrors = false;

            if (string.IsNullOrWhiteSpace(sale.PaymentMethodId))
            {
                ShowError("Le mode de paiement est obligatoire.");
                hasErrors = true;
            }

            if (!sale.AccountId.HasValue)
            {
                ShowError("Le compte est obligatoire.");
                hasErrors = true;
            }

            if (hasErrors)
            {
                return;
            }
        }

        isLoad = true;
        try
        {
            sale.BoutiqueId = BoutiqueId; // Set the boutique ID for the product
            var result = await _saleService.CreateSaleAsync(new CreateSaleRequest(sale));
            if (result.Success)
            {
                messageStore.Clear();
                editContext.NotifyValidationStateChanged();
                sale = new(); // Reset the boutique object
                ShowSuccess();
                await GetProductsAsync();
            }

        }
        catch (ApiException ex)
        {
            try
            {
                var errorResult = JsonSerializer.Deserialize<ErrorMessage>(ex.Content, new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });

                if (!string.IsNullOrWhiteSpace(errorResult?.Detail))
                {
                    ShowError(errorResult.Detail);
                }
            }
            catch
            {
                ShowError("Une erreur est survenue.");
            }

        }
        finally
        {
            isLoad = false;
        }
    }

    private void RemoveItem(SaleItem item)
    {
        sale.Items.Remove(item);
        TotalPriceSale();
    }

    private void TotalPriceSale()
    {
        sale.TotalPrice = sale.Items.Sum(x => x.Price * x.Quantity);
        saleItem.ProductId = Guid.Empty;
        saleItem = new();
    }

    private void AddItem()
    {
        if (saleItem.ProductId == Guid.Empty || saleItem.Quantity <= 0 || saleItem.Price <= 0)
            return;

        var alreadyExists = sale.Items.FirstOrDefault(i => i.ProductId == saleItem.ProductId);

        if (alreadyExists != null)
        {
            alreadyExists.Quantity += saleItem.Quantity;
            alreadyExists.Price = saleItem.Price;
            if(saleItem.Barcodes.Any())
                alreadyExists.Barcodes.Add(saleItem.Barcodes.First());

        }
        else
        {
            var item = new SaleItem
            {
                ProductId = saleItem.ProductId,
                Price = saleItem.Price,
                Quantity = saleItem.Quantity,
                Barcode = saleItem.Barcode,
                Barcodes = new List<string>() // s'assure que la liste existe
            };
            
            // si tu veux un seul élément unique dans Barcodes
            if(saleItem.Barcodes.Any())
            {
                item.Barcodes.Add(saleItem.Barcodes.First());
            }

            sale.Items.Add(item);


        }

        TotalPriceSale();

        closeAddQuantityModal();
    }


    private void showAddQuantityModal(Guid productId)
    {
        quantityModalVisible = true;

        saleItem.ProductId = productId;
        var selectedProduct = products.FirstOrDefault(p => p.Id == productId);
        if (selectedProduct is not null)
        {
            saleItem.Price = selectedProduct.Price;
            saleItem.Quantity = 1;
        }
    }

    private void AddQuantityBarcode(Guid productId, string barcode)
    {

        saleItem.ProductId = productId;
        saleItem.Barcodes.Add(barcode);
        var selectedProduct = products.FirstOrDefault(p => p.Id == productId);
        if (selectedProduct is not null)
        {
            saleItem.Barcode = selectedProduct.Barcode;
            saleItem.Price = selectedProduct.Price;
            saleItem.Quantity = 1;
        }
    }

    private void closeAddQuantityModal()
    {
        quantityModalVisible = false;
    }

    private string showModal(bool show) =>
    show
        ? "fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
        : "fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50";


    private string getProductName(Guid productId)
    {
        var product = products.FirstOrDefault(p => p.Id == productId);
        return product?.Name ?? "";
    }

    private void Cancel()
    {
        sale = new();
    }

    private void ShowSuccess()
    {
        ToastService.ShowToast("Succès", "Enregistré avec succès", "success");
    }

    private void ShowError(string message)
    {
        ToastService.ShowToast("Erreur", message, "error");
    }


    [JSInvokable]
    public void OnQrCodeScanned(string code)
    {
        ScannedCode = "";
        if (!string.IsNullOrEmpty(code))
        {
            var product =  products
            .Select(p => new
            {
                Product = p,
                Barcode = p.Barcodes.FirstOrDefault(b => b == code)
            })
            .FirstOrDefault(p => p.Product.Barcode == code || p.Barcode != null);
            
            if(product == null)
            {

                ScannedCode = "Produit non trouvé ❌";
                ShowError(ScannedCode);
                StateHasChanged();
                return;
            }

            if(product.Product.Barcode != code)
            {
                var alreadyExists = sale.Items.FirstOrDefault(i => i.Barcodes.Contains(code));
                if(alreadyExists != null)
                {
                    ScannedCode = "Article déjà ajouté ❌";
                    ShowError(ScannedCode);
                    StateHasChanged();
                    return;
                }
            }


            AddQuantityBarcode(product.Product.Id, product?.Barcode);
            AddItem();
        }
        else
        {
            ScannedCode = "Aucun QR code détecté ❌";
            ShowError(ScannedCode);
        }

        StateHasChanged();
    }

    private async Task StartScan()
    {
        onShowModalCodeQr();
        var dotnetRef = DotNetObjectReference.Create(this);
        await JSRuntime.InvokeVoidAsync("qrScanner.start", dotnetRef);

    }
    private async Task StopScan()
    {
        onShowModalCodeQr();
        await JSRuntime.InvokeVoidAsync("qrScanner.stop");
    }


    public async ValueTask DisposeAsync()
    {
        await StopScan();
    }

    private void onShowModalCodeQr()
    {
        ScannedCode = "";
        showModalCodeQR = !showModalCodeQR;
    }

}