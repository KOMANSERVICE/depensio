    {
        CloseEditCashFlowModal();
        await LoadAccountDetailAsync();
    }

    private bool IsDraftStatus(CashFlowStatus status)
    {
        // CashFlowStatus.Pending (0) maps to DRAFT in CashFlowStatusExtended (1)
        // Based on the API response, we check for Pending which is the first status
        return status == CashFlowStatus.Pending;
    }

