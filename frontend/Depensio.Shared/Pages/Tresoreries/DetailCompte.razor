    }

    private async Task HandleDeleteCashFlow()
    {
        if (!cashFlowToDeleteId.HasValue)
            return;

        isDeletingCashFlow = true;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.DeleteCashFlowAsync(boutiqueId, cashFlowToDeleteId.Value);
            if (response.IsSuccessStatusCode)
            {
                CloseDeleteConfirmationModal();
                await LoadAccountDetailAsync();
            }
        }
        catch (Exception)
        {
            // Silently handle error - could add toast notification here
        }
        finally
        {
            isDeletingCashFlow = false;
            StateHasChanged();
        }
    }
