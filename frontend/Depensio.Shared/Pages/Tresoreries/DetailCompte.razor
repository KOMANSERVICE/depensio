    private async Task OpenEditCashFlowModal(Guid cashFlowId)
    {
        isLoadingCashFlow = true;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.GetCashFlowAsync(boutiqueId, cashFlowId);
            if (response.Success && response.Data != null)
            {
                selectedCashFlow = response.Data.CashFlow;
                // Only allow editing DRAFT cash flows
                if (selectedCashFlow.Status == CashFlowStatusExtended.DRAFT)
                {
                    showEditCashFlowModal = true;
                }
            }
        }
        catch (Exception)
        {
            selectedCashFlow = null;
        }
        finally
        {
            isLoadingCashFlow = false;
            StateHasChanged();
        }
    }

    private void CloseEditCashFlowModal()
    {
        showEditCashFlowModal = false;
        selectedCashFlow = null;
    }

