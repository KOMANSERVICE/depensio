@page "/tresorerie/{boutiqueId:guid}/flux-recurrents"
@using depensio.Shared.Pages.Tresoreries.Models
@using depensio.Shared.Pages.Tresoreries.Components
@inherits FlowbitePage
@layout MainLayout
@inject ITresorerieService _tresorerieService
@inject NavigationManager _navigationManager

<PageTitleComponent Title="Flux recurrents" />

<HeaderPage
    Title="Tresorerie"
    SubTitle="Liste des flux recurrents"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <!-- Filtres -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex flex-wrap gap-3 items-center">
            <div class="flex items-center gap-2">
                <label class="text-sm text-gray-600">Type:</label>
                <select @bind="selectedType" @bind:after="GetRecurringCashFlowsAsync" class="border border-gray-300 rounded px-2 py-1 text-sm">
                    <option value="">Tous</option>
                    <option value="@CashFlowTypeExtended.INCOME">Entree</option>
                    <option value="@CashFlowTypeExtended.EXPENSE">Sortie</option>
                </select>
            </div>
            <div class="flex items-center gap-2">
                <label class="text-sm text-gray-600">Statut:</label>
                <select @bind="selectedIsActive" @bind:after="GetRecurringCashFlowsAsync" class="border border-gray-300 rounded px-2 py-1 text-sm">
                    <option value="">Tous</option>
                    <option value="true">Actif</option>
                    <option value="false">Inactif</option>
                </select>
            </div>
            <button @onclick="ResetFilters" class="text-sm text-gray-500 hover:text-gray-700 underline">
                Reinitialiser
            </button>
        </div>
        <div>
           @*  <a href="/tresorerie/@boutiqueId/flux-recurrents/nouveau"
                class="px-4 py-2 bg-primary-700 hover:bg-amber-800 text-white rounded-lg flex items-center gap-2">
                <i class="fas fa-plus"></i>
                <span class="hidden md:inline">Nouveau flux recurrent</span>
            </a> *@
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingDataComponent />
    }
    else
    {
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-gradient-to-r from-primary-700 to-amber-600 rounded-lg p-4 text-white">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm opacity-80">Total flux recurrents</p>
                        <p class="text-2xl font-bold">@totalCount</p>
                    </div>
                    <i class="fas fa-sync-alt text-3xl opacity-50"></i>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500">Estimation mensuelle</p>
                        <p class="text-2xl font-bold text-blue-600">@estimatedMonthlyTotal.ToString("N0") FCFA</p>
                    </div>
                    <i class="fas fa-calculator text-3xl text-blue-300"></i>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500">Actifs</p>
                        <p class="text-2xl font-bold text-green-600">@recurringCashFlows.Count(r => r.IsActive)</p>
                    </div>
                    <i class="fas fa-check-circle text-3xl text-green-300"></i>
                </div>
            </div>
        </div>

        <!-- Desktop Table -->
        <div class="desktop-view bg-white rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-primary-700 text-white">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Libelle</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Type</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Categorie</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Montant</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Frequence</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Compte</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Prochaine echeance</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Statut</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (recurringCashFlows.Any())
                    {
                        @foreach(var flow in recurringCashFlows)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">@flow.Label</div>
                                    @if (!string.IsNullOrEmpty(flow.ThirdPartyName))
                                    {
                                        <div class="text-xs text-gray-500">@flow.ThirdPartyName</div>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetTypeColor(flow.Type)">
                                        @GetTypeLabel(flow.Type)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @flow.CategoryName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium @GetAmountColor(flow.Type)">
                                    @(flow.Type == CashFlowTypeExtended.EXPENSE ? "-" : "+")@flow.Amount.ToString("N0") FCFA
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @GetFrequencyLabel(flow.Frequency, flow.Interval)
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @flow.AccountName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @flow.NextOccurrence.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <button @onclick="() => ToggleRecurringCashFlowAsync(flow)"
                                        class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full cursor-pointer transition-colors duration-200 @GetStatusColor(flow.IsActive) hover:opacity-80"
                                        title="@(flow.IsActive ? "Cliquer pour desactiver" : "Cliquer pour activer")"
                                        disabled="@isTogglingId.HasValue">
                                        @if (isTogglingId == flow.Id)
                                        {
                                            <i class="fas fa-spinner fa-spin mr-1"></i>
                                        }
                                        @(flow.IsActive ? "Actif" : "Inactif")
                                    </button>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <button @onclick="() => OpenEditModal(flow)"
                                        class="text-primary-700 hover:text-amber-800 mr-2"
                                        title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center">
                                <i class="fas fa-sync-alt text-6xl text-gray-300 mb-4"></i>
                                <p class="text-gray-500 text-lg">Aucun flux recurrent trouve</p>
                                @* <a href="/tresorerie/@boutiqueId/flux-recurrents/nouveau"
                                    class="mt-4 inline-block px-4 py-2 bg-primary-700 hover:bg-amber-800 text-white rounded-lg">
                                    Creer un flux recurrent
                                </a> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="mobile-view">
            <div class="grid grid-cols-1 gap-4">
                @if (recurringCashFlows.Any())
                {
                    @foreach (var flow in recurringCashFlows)
                    {
                        <div class="bg-white rounded-lg shadow-md p-4 border-l-4 @GetBorderColor(flow.Type)">
                            <div class="flex justify-between items-start mb-2">
                                <div>
                                    <h3 class="font-medium text-gray-900">@flow.Label</h3>
                                    @if (!string.IsNullOrEmpty(flow.ThirdPartyName))
                                    {
                                        <span class="text-xs text-gray-500">@flow.ThirdPartyName</span>
                                    }
                                </div>
                                <div class="flex items-center gap-2">
                                    <button @onclick="() => ToggleRecurringCashFlowAsync(flow)"
                                        class="px-2 text-xs font-semibold rounded-full cursor-pointer transition-colors duration-200 @GetStatusColor(flow.IsActive) hover:opacity-80"
                                        title="@(flow.IsActive ? "Cliquer pour desactiver" : "Cliquer pour activer")"
                                        disabled="@isTogglingId.HasValue">
                                        @if (isTogglingId == flow.Id)
                                        {
                                            <i class="fas fa-spinner fa-spin mr-1"></i>
                                        }
                                        @(flow.IsActive ? "Actif" : "Inactif")
                                    </button>
                                    <button @onclick="() => OpenEditModal(flow)"
                                        class="text-primary-700 hover:text-amber-800"
                                        title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="flex justify-between items-center mt-3">
                                <div>
                                    <span class="text-lg font-bold @GetAmountColor(flow.Type)">
                                        @(flow.Type == CashFlowTypeExtended.EXPENSE ? "-" : "+")@flow.Amount.ToString("N0") FCFA
                                    </span>
                                    <div class="text-xs text-gray-500 mt-1">
                                        <span>@GetFrequencyLabel(flow.Frequency, flow.Interval)</span> Â·
                                        <span>Prochaine: @flow.NextOccurrence.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="px-2 text-xs rounded-full @GetTypeColor(flow.Type)">
                                        @GetTypeLabel(flow.Type)
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-sync-alt text-6xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500 text-lg">Aucun flux recurrent trouve</p>
                        <a href="/tresorerie/@boutiqueId/flux-recurrents/nouveau"
                            class="mt-4 inline-block px-4 py-2 bg-primary-700 hover:bg-amber-800 text-white rounded-lg">
                            Creer un flux recurrent
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Footer -->
        <div class="flex justify-between items-center mt-4 pt-4 border-t border-gray-200">
            <span class="text-sm text-gray-600">@totalCount flux recurrents</span>
        </div>
    }
</div>

<!-- Modal Edition Flux Recurrent -->
@if (showEditModal && selectedRecurringCashFlow != null)
{
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" @onclick="CloseEditModal">
        <div class="relative top-10 mx-auto p-0 border w-11/12 md:w-2/3 lg:w-1/2 shadow-lg rounded-md bg-white"
            @onclick:stopPropagation="true">
            <div class="flex justify-between items-center p-4 border-b">
                <h3 class="text-lg font-semibold text-gray-900">Modifier le flux recurrent</h3>
                <button @onclick="CloseEditModal" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <EditRecurringCashFlowComponent
                BoutiqueId="@boutiqueId"
                RecurringCashFlow="@selectedRecurringCashFlow"
                OnAfterSave="HandleAfterEdit"
                OnCancelSave="CloseEditModal" />
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid boutiqueId { get; set; }

    private List<RecurringCashFlowDTO> recurringCashFlows = new();
    private bool isLoading = true;

    // Filters
    private CashFlowTypeExtended? selectedType = null;
    private string? selectedIsActive = "true";

    // Summary
    private int totalCount = 0;
    private decimal estimatedMonthlyTotal = 0;

    // Edit Modal
    private bool showEditModal = false;
    private RecurringCashFlowDTO? selectedRecurringCashFlow = null;

    // Toggle
    private Guid? isTogglingId = null;

    protected override async Task OnInitializedAsync()
    {
        await GetRecurringCashFlowsAsync();
    }

    private void OpenEditModal(RecurringCashFlowDTO recurringCashFlow)
    {
        selectedRecurringCashFlow = recurringCashFlow;
        showEditModal = true;
        StateHasChanged();
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        selectedRecurringCashFlow = null;
        StateHasChanged();
    }

    private async Task HandleAfterEdit()
    {
        CloseEditModal();
        await GetRecurringCashFlowsAsync();
    }

    private async Task ToggleRecurringCashFlowAsync(RecurringCashFlowDTO recurringCashFlow)
    {
        if (isTogglingId.HasValue)
            return;

        isTogglingId = recurringCashFlow.Id;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.ToggleRecurringCashFlowAsync(
                boutiqueId,
                recurringCashFlow.Id);

            if (response.Success)
            {
                // Refresh the list to get the updated data
                await GetRecurringCashFlowsAsync();
            }
        }
        catch (Exception)
        {
            // Error handling - the list will remain unchanged
        }
        finally
        {
            isTogglingId = null;
            StateHasChanged();
        }
    }

    private async Task GetRecurringCashFlowsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            bool? isActive = selectedIsActive switch
            {
                "true" => true,
                "false" => false,
                _ => null
            };

            var response = await _tresorerieService.GetRecurringCashFlowsAsync(
                boutiqueId,
                isActive,
                selectedType);

            if (response.Success && response.Data != null)
            {
                recurringCashFlows = response.Data.RecurringCashFlows.ToList();
                totalCount = response.Data.TotalCount;
                estimatedMonthlyTotal = response.Data.EstimatedMonthlyTotal;
            }
        }
        catch (Exception)
        {
            recurringCashFlows = new List<RecurringCashFlowDTO>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ResetFilters()
    {
        selectedType = null;
        selectedIsActive = "true";
        await GetRecurringCashFlowsAsync();
    }

    private string GetTypeLabel(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "Entree",
        CashFlowTypeExtended.EXPENSE => "Sortie",
        CashFlowTypeExtended.TRANSFER => "Transfert",
        _ => "Inconnu"
    };

    private string GetTypeColor(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "bg-green-100 text-green-800",
        CashFlowTypeExtended.EXPENSE => "bg-red-100 text-red-800",
        CashFlowTypeExtended.TRANSFER => "bg-blue-100 text-blue-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetBorderColor(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "border-green-500",
        CashFlowTypeExtended.EXPENSE => "border-red-500",
        CashFlowTypeExtended.TRANSFER => "border-blue-500",
        _ => "border-gray-500"
    };

    private string GetAmountColor(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "text-green-600",
        CashFlowTypeExtended.EXPENSE => "text-red-600",
        CashFlowTypeExtended.TRANSFER => "text-blue-600",
        _ => "text-gray-600"
    };

    private string GetStatusColor(bool isActive) => isActive
        ? "bg-green-100 text-green-800"
        : "bg-gray-100 text-gray-600";

    private string GetFrequencyLabel(RecurringFrequency frequency, int interval) => frequency switch
    {
        RecurringFrequency.DAILY => interval == 1 ? "Quotidien" : $"Tous les {interval} jours",
        RecurringFrequency.WEEKLY => interval == 1 ? "Hebdomadaire" : $"Toutes les {interval} semaines",
        RecurringFrequency.MONTHLY => interval == 1 ? "Mensuel" : $"Tous les {interval} mois",
        RecurringFrequency.YEARLY => interval == 1 ? "Annuel" : $"Tous les {interval} ans",
        _ => "Inconnu"
    };
}
