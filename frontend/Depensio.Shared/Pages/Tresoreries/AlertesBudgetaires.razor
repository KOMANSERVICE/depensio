@page "/tresorerie/{boutiqueId:guid}/budgets/alerts"
@using depensio.Shared.Pages.Tresoreries.Models
@inherits FlowbitePage
@layout MainLayout
@inject ITresorerieService _tresorerieService
@inject NavigationManager NavigationManager

<PageTitleComponent Title="Alertes budgetaires" />

<HeaderPage
    Title="Alertes budgetaires"
    SubTitle="Suivi des depassements et alertes sur les budgets"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex items-center">
            <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
            <select id="itemsPerPage" @bind="itemsPerPage" @bind:after="OnItemsPerPageChanged" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <span class="ml-2 text-sm text-gray-600">elements</span>
        </div>
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Rechercher une alerte..."
                @bind="searchTerm"
                @bind:event="oninput"
                @bind:after="ApplyFilter"
                class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex gap-3 items-center">
            <a href="/tresorerie/@boutiqueId/budgets"
                class="text-primary-700 hover:text-primary-800 text-sm flex items-center gap-1">
                <i class="fas fa-arrow-left"></i>
                Retour aux budgets
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingDataComponent />
    }
    else
    {
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-gradient-to-r from-primary-700 to-amber-600 rounded-lg p-4 text-white">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm opacity-80">Total Alertes</p>
                        <p class="text-2xl font-bold">@totalCount</p>
                    </div>
                    <i class="fas fa-bell text-3xl opacity-50"></i>
                </div>
            </div>
            <div class="bg-white border border-red-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-red-600">Budgets depasses</p>
                        <p class="text-2xl font-bold @(exceededCount > 0 ? "text-red-600" : "text-green-600")">@exceededCount</p>
                    </div>
                    <i class="fas fa-exclamation-triangle text-3xl @(exceededCount > 0 ? "text-red-300" : "text-gray-300")"></i>
                </div>
            </div>
            <div class="bg-white border border-yellow-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-yellow-600">En approche du seuil</p>
                        <p class="text-2xl font-bold @(approachingCount > 0 ? "text-yellow-600" : "text-green-600")">@approachingCount</p>
                    </div>
                    <i class="fas fa-exclamation-circle text-3xl @(approachingCount > 0 ? "text-yellow-300" : "text-gray-300")"></i>
                </div>
            </div>
        </div>

        <!-- Desktop Table -->
        <div class="desktop-view bg-white rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-primary-700 text-white">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Budget</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Type</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Periode</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            Alloue</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            Depense</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            Restant</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Consommation</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Niveau alerte</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (paginatedAlerts.Any())
                    {
                        @foreach(var alert in paginatedAlerts)
                        {
                            <tr class="@GetRowBackgroundColor(alert)">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 rounded-full flex items-center justify-center @GetTypeBackgroundColor(alert.Type) mr-3">
                                            <i class="@GetTypeIcon(alert.Type) text-white text-sm"></i>
                                        </div>
                                        <div class="text-sm font-medium text-gray-900">
                                            @alert.BudgetName
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetTypeColor(alert.Type)">
                                        @GetTypeLabel(alert.Type)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @alert.StartDate.ToString("dd/MM/yyyy") - @alert.EndDate.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                                    @alert.AllocatedAmount.ToString("N0") @alert.Currency
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-red-600">
                                    @alert.SpentAmount.ToString("N0") @alert.Currency
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-right @(alert.RemainingAmount < 0 ? "text-red-600" : "text-green-600")">
                                    @alert.RemainingAmount.ToString("N0") @alert.Currency
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="w-24">
                                        <div class="flex items-center gap-2">
                                            <div class="flex-1 overflow-hidden h-2 text-xs flex rounded-full bg-gray-200">
                                                <div style="width:@Math.Min(alert.ConsumptionRate, 100).ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                                                     class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center @GetProgressBarColor(alert.ConsumptionRate)">
                                                </div>
                                            </div>
                                            <span class="text-xs @GetPercentColor(alert.ConsumptionRate)">@alert.ConsumptionRate.ToString("N0")%</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetAlertLevelColor(alert.AlertLevel)">
                                        @GetAlertLevelLabel(alert.AlertLevel)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <div class="flex gap-2">
                                        <a href="/tresorerie/@boutiqueId/budgets/@alert.BudgetId"
                                            class="text-blue-600 hover:text-blue-800" title="Voir le detail">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center">
                                <i class="fas fa-check-circle text-6xl text-green-300 mb-4"></i>
                                <p class="text-gray-500 text-lg">Aucune alerte budgetaire</p>
                                <p class="text-gray-400 text-sm">Tous vos budgets sont dans les limites</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="mobile-view">
            <div class="grid grid-cols-1 gap-4">
                @if (paginatedAlerts.Any())
                {
                    @foreach (var alert in paginatedAlerts)
                    {
                        <div class="bg-white rounded-lg shadow-md p-4 @GetMobileBorderColor(alert)">
                            <div class="flex justify-between items-start mb-2">
                                <div class="flex items-center gap-2">
                                    <div class="w-8 h-8 rounded-full flex items-center justify-center @GetTypeBackgroundColor(alert.Type)">
                                        <i class="@GetTypeIcon(alert.Type) text-white text-sm"></i>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-900">@alert.BudgetName</h3>
                                        <span class="text-xs px-2 py-0.5 rounded-full @GetTypeColor(alert.Type)">@GetTypeLabel(alert.Type)</span>
                                    </div>
                                </div>
                                <span class="px-2 text-xs font-semibold rounded-full @GetAlertLevelColor(alert.AlertLevel)">
                                    @GetAlertLevelLabel(alert.AlertLevel)
                                </span>
                            </div>

                            <div class="text-xs text-gray-500 mb-3">
                                <i class="fas fa-calendar-alt mr-1"></i>
                                @alert.StartDate.ToString("dd/MM/yyyy") - @alert.EndDate.ToString("dd/MM/yyyy")
                            </div>

                            <div class="grid grid-cols-3 gap-2 mb-3">
                                <div class="text-center">
                                    <p class="text-xs text-gray-500">Alloue</p>
                                    <p class="text-sm font-semibold text-gray-900">@alert.AllocatedAmount.ToString("N0")</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500">Depense</p>
                                    <p class="text-sm font-semibold text-red-600">@alert.SpentAmount.ToString("N0")</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500">Restant</p>
                                    <p class="text-sm font-semibold @(alert.RemainingAmount < 0 ? "text-red-600" : "text-green-600")">@alert.RemainingAmount.ToString("N0")</p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="flex items-center justify-between mb-1">
                                    <span class="text-xs text-gray-500">Consommation</span>
                                    <span class="text-xs font-semibold @GetPercentColor(alert.ConsumptionRate)">@alert.ConsumptionRate.ToString("N1")%</span>
                                </div>
                                <div class="overflow-hidden h-2 text-xs flex rounded-full bg-gray-200">
                                    <div style="width:@Math.Min(alert.ConsumptionRate, 100).ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                                         class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center @GetProgressBarColor(alert.ConsumptionRate)">
                                    </div>
                                </div>
                            </div>

                            <div class="flex justify-end gap-2">
                                <a href="/tresorerie/@boutiqueId/budgets/@alert.BudgetId"
                                    class="text-blue-600 hover:text-blue-800 p-2" title="Voir le detail">
                                    <i class="fas fa-eye mr-1"></i> Detail
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-check-circle text-6xl text-green-300 mb-4"></i>
                        <p class="text-gray-500 text-lg">Aucune alerte budgetaire</p>
                        <p class="text-gray-400 text-sm">Tous vos budgets sont dans les limites</p>
                    </div>
                }
            </div>
        </div>

        <!-- Footer with pagination -->
        <div class="flex flex-col md:flex-row justify-between items-center mt-4 pt-4 border-t border-gray-200">
            <div class="mb-4 md:mb-0">
                <span class="text-sm text-gray-600">@filteredAlerts.Count alerte(s)</span>
            </div>
            <div class="text-sm text-gray-600 mb-4 md:mb-0">
                Affichage de @StartIndex a @EndIndex sur @filteredAlerts.Count elements
            </div>
            <div class="flex items-center gap-1">
                <button @onclick="GoToPreviousPage"
                        disabled="@(currentPage <= 1)"
                        class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-angle-left"></i>
                </button>
                @for (int i = 1; i <= TotalPages; i++)
                {
                    var pageNumber = i;
                    <button @onclick="() => GoToPage(pageNumber)"
                            class="px-3 py-1 rounded @(currentPage == pageNumber ? "bg-primary-700 text-white" : "border border-gray-300 text-gray-600 hover:bg-gray-100")">
                        @pageNumber
                    </button>
                }
                <button @onclick="GoToNextPage"
                        disabled="@(currentPage >= TotalPages)"
                        class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-angle-right"></i>
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid boutiqueId { get; set; }

    private List<BudgetAlertDto> alerts = new();
    private List<BudgetAlertDto> filteredAlerts = new();
    private bool isLoading = true;
    private string searchTerm = "";
    private int totalCount = 0;
    private int exceededCount = 0;
    private int approachingCount = 0;

    // Pagination
    private int itemsPerPage = 10;
    private int currentPage = 1;

    private List<BudgetAlertDto> paginatedAlerts => filteredAlerts
        .Skip((currentPage - 1) * itemsPerPage)
        .Take(itemsPerPage)
        .ToList();

    private int TotalPages => filteredAlerts.Count == 0 ? 1 : (int)Math.Ceiling((double)filteredAlerts.Count / itemsPerPage);
    private int StartIndex => filteredAlerts.Count == 0 ? 0 : ((currentPage - 1) * itemsPerPage) + 1;
    private int EndIndex => Math.Min(currentPage * itemsPerPage, filteredAlerts.Count);

    protected override async Task OnInitializedAsync()
    {
        await GetBudgetAlertsAsync();
    }

    private async Task GetBudgetAlertsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.GetBudgetAlertsAsync(boutiqueId);
            if (response.Success && response.Data != null)
            {
                alerts = response.Data.Alerts.ToList();
                totalCount = response.Data.TotalCount;
                exceededCount = response.Data.ExceededCount;
                approachingCount = response.Data.ApproachingCount;
                ApplyFilter();
            }
        }
        catch (Exception)
        {
            alerts = new List<BudgetAlertDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplyFilter()
    {
        var filtered = alerts.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var search = searchTerm.Trim().ToLower();
            filtered = filtered.Where(a =>
                (a.BudgetName?.ToLower().Contains(search) ?? false) ||
                GetTypeLabel(a.Type).ToLower().Contains(search) ||
                GetAlertLevelLabel(a.AlertLevel).ToLower().Contains(search)
            );
        }

        filteredAlerts = filtered.ToList();
        currentPage = 1;
    }

    private void OnItemsPerPageChanged()
    {
        currentPage = 1;
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= TotalPages)
        {
            currentPage = page;
        }
    }

    private void GoToPreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
        }
    }

    private void GoToNextPage()
    {
        if (currentPage < TotalPages)
        {
            currentPage++;
        }
    }

    private string GetTypeLabel(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "Global",
        BudgetType.CATEGORY => "Par categorie",
        BudgetType.PROJECT => "Projet",
        _ => "Inconnu"
    };

    private string GetTypeColor(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "bg-blue-100 text-blue-800",
        BudgetType.CATEGORY => "bg-purple-100 text-purple-800",
        BudgetType.PROJECT => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetTypeBackgroundColor(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "bg-blue-500",
        BudgetType.CATEGORY => "bg-purple-500",
        BudgetType.PROJECT => "bg-green-500",
        _ => "bg-gray-500"
    };

    private string GetTypeIcon(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "fas fa-globe",
        BudgetType.CATEGORY => "fas fa-tags",
        BudgetType.PROJECT => "fas fa-project-diagram",
        _ => "fas fa-wallet"
    };

    private string GetPercentColor(decimal percent) =>
        percent >= 100 ? "text-red-600" :
        percent >= 80 ? "text-yellow-600" :
        percent >= 50 ? "text-orange-600" :
        "text-green-600";

    private string GetProgressBarColor(decimal percent) =>
        percent >= 100 ? "bg-red-500" :
        percent >= 80 ? "bg-yellow-500" :
        percent >= 50 ? "bg-orange-500" :
        "bg-green-500";

    private string GetRowBackgroundColor(BudgetAlertDto alert) =>
        alert.IsExceeded ? "bg-red-50" :
        alert.AlertLevel == "APPROACHING" ? "bg-yellow-50" :
        "";

    private string GetMobileBorderColor(BudgetAlertDto alert) =>
        alert.IsExceeded ? "border-l-4 border-red-500" :
        alert.AlertLevel == "APPROACHING" ? "border-l-4 border-yellow-500" :
        "";

    private string GetAlertLevelColor(string alertLevel) => alertLevel switch
    {
        "EXCEEDED" => "bg-red-100 text-red-800",
        "APPROACHING" => "bg-yellow-100 text-yellow-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetAlertLevelLabel(string alertLevel) => alertLevel switch
    {
        "EXCEEDED" => "Depasse",
        "APPROACHING" => "En approche",
        _ => alertLevel
    };
}
