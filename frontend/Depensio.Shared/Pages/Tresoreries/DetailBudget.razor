@page "/tresorerie/{boutiqueId:guid}/budgets/{budgetId:guid}"
@using depensio.Shared.Pages.Tresoreries.Models
@inherits FlowbitePage
@layout MainLayout
@inject ITresorerieService _tresorerieService
@inject NavigationManager NavigationManager

<PageTitleComponent Title="Detail du budget" />

<HeaderPage
    Title="Detail du budget"
    SubTitle="Consulter les informations et depenses du budget"/>

@if (isLoading)
{
    <LoadingDataComponent />
}
else if (budget == null)
{
    <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <i class="fas fa-exclamation-triangle text-6xl text-yellow-500 mb-4"></i>
        <p class="text-gray-600 text-lg">Budget non trouve</p>
        <button @onclick="GoBack" class="mt-4 px-4 py-2 bg-primary-700 text-white rounded-lg hover:bg-amber-800">
            <i class="fas fa-arrow-left mr-2"></i>Retour
        </button>
    </div>
}
else
{
    <!-- Bouton Retour -->
    <div class="mb-4">
        <button @onclick="GoBack" class="text-primary-700 hover:text-amber-800 flex items-center">
            <i class="fas fa-arrow-left mr-2"></i>Retour
        </button>
    </div>

    <!-- Informations du budget -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-full flex items-center justify-center @GetTypeBackgroundColor(budget.Type)">
                    <i class="@GetTypeIcon(budget.Type) text-xl text-white"></i>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-gray-900">@budget.Name</h2>
                    <span class="text-sm px-2 py-1 rounded-full @GetTypeColor(budget.Type)">@GetTypeLabel(budget.Type)</span>
                </div>
            </div>
            <div class="mt-4 md:mt-0 flex items-center gap-2">
                @if (budget.IsActive)
                {
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                        <i class="fas fa-check-circle mr-1"></i>Actif
                    </span>
                }
                else
                {
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-gray-100 text-gray-800">
                        <i class="fas fa-times-circle mr-1"></i>Inactif
                    </span>
                }
                @if (budget.IsExceeded)
                {
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-red-100 text-red-800">
                        <i class="fas fa-exclamation-triangle mr-1"></i>Depasse
                    </span>
                }
                else if (budget.PercentUsed >= budget.AlertThreshold)
                {
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">
                        <i class="fas fa-exclamation-circle mr-1"></i>Alerte (@budget.AlertThreshold%)
                    </span>
                }
                <button @onclick="OpenEditModal" class="px-3 py-1 text-sm font-semibold rounded-full bg-amber-100 text-amber-800 hover:bg-amber-200">
                    <i class="fas fa-edit mr-1"></i>Modifier
                </button>
            </div>
        </div>

        <!-- Grille d'informations -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
            <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-xs text-gray-500">Periode</p>
                <p class="text-sm font-medium text-gray-900">
                    @budget.StartDate.ToString("dd/MM/yyyy") - @budget.EndDate.ToString("dd/MM/yyyy")
                </p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-xs text-gray-500">Devise</p>
                <p class="text-sm font-medium text-gray-900">@budget.Currency</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-xs text-gray-500">Seuil d'alerte</p>
                <p class="text-sm font-medium text-gray-900">@budget.AlertThreshold%</p>
            </div>
            <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-xs text-gray-500">Cree le</p>
                <p class="text-sm font-medium text-gray-900">@budget.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>
    </div>

    <!-- Cartes de synthese -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gradient-to-r from-primary-700 to-amber-600 rounded-lg p-4 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm opacity-80">Budget alloue</p>
                    <p class="text-2xl font-bold">@budget.AllocatedAmount.ToString("N0") @budget.Currency</p>
                </div>
                <i class="fas fa-coins text-3xl opacity-50"></i>
            </div>
        </div>
        <div class="bg-white border border-red-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-red-600">Depense</p>
                    <p class="text-2xl font-bold text-red-600">@budget.SpentAmount.ToString("N0") @budget.Currency</p>
                </div>
                <i class="fas fa-arrow-up text-3xl text-red-300"></i>
            </div>
        </div>
        <div class="bg-white border border-green-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-green-600">Restant</p>
                    <p class="text-2xl font-bold @(budget.RemainingAmount < 0 ? "text-red-600" : "text-green-600")">
                        @budget.RemainingAmount.ToString("N0") @budget.Currency
                    </p>
                </div>
                <i class="fas fa-piggy-bank text-3xl text-green-300"></i>
            </div>
        </div>
        <div class="bg-white border border-blue-200 rounded-lg p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-blue-600">Utilisation</p>
                    <p class="text-2xl font-bold @GetPercentColor(budget.PercentUsed)">@budget.PercentUsed.ToString("N1")%</p>
                </div>
                <i class="fas fa-chart-pie text-3xl text-blue-300"></i>
            </div>
        </div>
    </div>

    <!-- Barre de progression -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-tasks mr-2 text-primary-700"></i>Progression du budget
        </h3>
        <div class="relative pt-1">
            <div class="flex mb-2 items-center justify-between">
                <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full @GetProgressBadgeColor(budget.PercentUsed)">
                        @GetProgressLabel(budget.PercentUsed)
                    </span>
                </div>
                <div class="text-right">
                    <span class="text-xs font-semibold inline-block @GetPercentColor(budget.PercentUsed)">
                        @budget.PercentUsed.ToString("N1")%
                    </span>
                </div>
            </div>
            <div class="overflow-hidden h-4 text-xs flex rounded-full bg-gray-200">
                <div style="width:@Math.Min(budget.PercentUsed, 100).ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                     class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center @GetProgressBarColor(budget.PercentUsed) transition-all duration-500">
                </div>
            </div>
            @if (budget.AlertThreshold > 0 && budget.AlertThreshold < 100)
            {
                <div class="relative mt-1">
                    <div class="absolute" style="left:@budget.AlertThreshold.ToString(System.Globalization.CultureInfo.InvariantCulture)%">
                        <div class="w-0.5 h-3 bg-yellow-500 -mt-5"></div>
                        <span class="text-xs text-yellow-600 -ml-3">@budget.AlertThreshold%</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Repartition par categorie -->
    @if (budget.CategoryBreakdown.Any())
    {
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-chart-pie mr-2 text-primary-700"></i>Repartition par categorie
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var category in budget.CategoryBreakdown.OrderByDescending(c => c.Amount))
                {
                    <div class="bg-gray-50 rounded-lg p-4 border-l-4 @GetCategoryBorderColor(category.Percentage)">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center gap-2">
                                @if (!string.IsNullOrEmpty(category.CategoryIcon))
                                {
                                    <i class="@category.CategoryIcon text-gray-600"></i>
                                }
                                <span class="font-medium text-gray-900">@category.CategoryName</span>
                            </div>
                            <span class="text-sm font-bold @GetPercentColor(category.Percentage)">@category.Percentage.ToString("N1")%</span>
                        </div>
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-600">@category.Amount.ToString("N0") @budget.Currency</span>
                            <span class="text-gray-500">@category.TransactionCount transactions</span>
                        </div>
                        <div class="mt-2 overflow-hidden h-2 text-xs flex rounded-full bg-gray-200">
                            <div style="width:@Math.Min(category.Percentage, 100).ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                                 class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-primary-700 transition-all duration-500">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Evolution dans le temps -->
    @if (budget.TimeEvolution.Any())
    {
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-chart-line mr-2 text-primary-700"></i>Evolution mensuelle
            </h3>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mois</th>
                            <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Depenses</th>
                            <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Cumul</th>
                            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Progression</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var month in budget.TimeEvolution)
                        {
                            var cumulPercent = budget.AllocatedAmount > 0 ? (month.CumulativeAmount / budget.AllocatedAmount * 100) : 0;
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                                    @month.MonthLabel @month.Year
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-red-600">
                                    @month.Amount.ToString("N0") @budget.Currency
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                                    @month.CumulativeAmount.ToString("N0") @budget.Currency
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap">
                                    <div class="flex items-center gap-2">
                                        <div class="flex-1 overflow-hidden h-2 text-xs flex rounded-full bg-gray-200">
                                            <div style="width:@Math.Min(cumulPercent, 100).ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                                                 class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center @GetProgressBarColor(cumulPercent)">
                                            </div>
                                        </div>
                                        <span class="text-xs text-gray-500 w-12 text-right">@cumulPercent.ToString("N0")%</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Liste des depenses -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-list mr-2 text-primary-700"></i>Depenses du budget (@budget.Expenses.Count)
        </h3>

        @if (budget.Expenses.Any())
        {
            <!-- Vue Desktop -->
            <div class="desktop-view overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Libelle</th>
                            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Categorie</th>
                            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tiers</th>
                            <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
                            <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Montant</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var expense in budget.Expenses.OrderByDescending(e => e.Date))
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                                    @expense.Date.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div>@expense.Label</div>
                                    @if (!string.IsNullOrWhiteSpace(expense.Description))
                                    {
                                        <div class="text-xs text-gray-500">@expense.Description</div>
                                    }
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                    @expense.CategoryName
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                    @(string.IsNullOrEmpty(expense.ThirdPartyName) ? "-" : expense.ThirdPartyName)
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap">
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full @GetStatusColor(expense.Status)">
                                        @GetStatusLabel(expense.Status)
                                    </span>
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-right text-red-600">
                                    -@expense.Amount.ToString("N0") @expense.Currency
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Vue Mobile -->
            <div class="mobile-view">
                <div class="space-y-3">
                    @foreach (var expense in budget.Expenses.OrderByDescending(e => e.Date))
                    {
                        <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-red-500">
                            <div class="flex justify-between items-start mb-2">
                                <div class="flex-1">
                                    <p class="font-medium text-gray-900">@expense.Label</p>
                                    @if (!string.IsNullOrWhiteSpace(expense.Description))
                                    {
                                        <p class="text-xs text-gray-500">@expense.Description</p>
                                    }
                                    <p class="text-xs text-gray-500 mt-1">@expense.CategoryName</p>
                                </div>
                                <span class="text-sm font-bold text-red-600">
                                    -@expense.Amount.ToString("N0") @expense.Currency
                                </span>
                            </div>
                            <div class="flex justify-between items-center text-xs text-gray-500">
                                <span>@expense.Date.ToString("dd/MM/yyyy")</span>
                                <span class="px-2 py-0.5 rounded-full @GetStatusColor(expense.Status)">
                                    @GetStatusLabel(expense.Status)
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-lg">Aucune depense enregistree</p>
            </div>
        }
    </div>
}

<!-- Modal Edition Budget -->
@if (showEditModal && budgetForEdit != null)
{
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-lg shadow-lg rounded-md bg-white">
            <div class="flex justify-between items-center pb-3 border-b">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-edit mr-2 text-primary-700"></i>Modifier le budget
                </h3>
                <button @onclick="CloseEditModal" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <EditBudgetComponent
                BoutiqueId="@boutiqueId"
                Budget="@budgetForEdit"
                OnAfterSave="HandleAfterSave"
                OnCancelSave="CloseEditModal" />
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid boutiqueId { get; set; }

    [Parameter]
    public Guid budgetId { get; set; }

    private BudgetDetailDto? budget;
    private bool isLoading = true;

    // Modal edition
    private bool showEditModal = false;
    private BudgetListDto? budgetForEdit;

    protected override async Task OnInitializedAsync()
    {
        await LoadBudgetDetailAsync();
    }

    private async Task LoadBudgetDetailAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.GetBudgetByIdAsync(boutiqueId, budgetId);
            if (response.Success && response.Data != null)
            {
                budget = response.Data.Budget;
            }
            else
            {
                budget = null;
            }
        }
        catch (Exception)
        {
            budget = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo($"/tresorerie/{boutiqueId}/comptes");
    }

    private string GetTypeLabel(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "Global",
        BudgetType.CATEGORY => "Par categorie",
        BudgetType.PROJECT => "Projet",
        _ => "Inconnu"
    };

    private string GetTypeColor(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "bg-blue-100 text-blue-800",
        BudgetType.CATEGORY => "bg-purple-100 text-purple-800",
        BudgetType.PROJECT => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetTypeBackgroundColor(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "bg-blue-500",
        BudgetType.CATEGORY => "bg-purple-500",
        BudgetType.PROJECT => "bg-green-500",
        _ => "bg-gray-500"
    };

    private string GetTypeIcon(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "fas fa-globe",
        BudgetType.CATEGORY => "fas fa-tags",
        BudgetType.PROJECT => "fas fa-project-diagram",
        _ => "fas fa-wallet"
    };

    private string GetStatusLabel(CashFlowStatus status) => status switch
    {
        CashFlowStatus.DRAFT => "Brouillon",
        CashFlowStatus.PENDING => "En attente",
        CashFlowStatus.APPROVED => "Approuve",
        CashFlowStatus.REJECTED => "Rejete",
        CashFlowStatus.CANCELLED => "Annule",
        _ => "Inconnu"
    };

    private string GetStatusColor(CashFlowStatus status) => status switch
    {
        CashFlowStatus.DRAFT => "bg-blue-100 text-blue-800",
        CashFlowStatus.PENDING => "bg-yellow-100 text-yellow-800",
        CashFlowStatus.APPROVED => "bg-green-100 text-green-800",
        CashFlowStatus.REJECTED => "bg-red-100 text-red-800",
        CashFlowStatus.CANCELLED => "bg-gray-100 text-gray-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetPercentColor(decimal percent) =>
        percent >= 100 ? "text-red-600" :
        percent >= 80 ? "text-yellow-600" :
        percent >= 50 ? "text-orange-600" :
        "text-green-600";

    private string GetProgressBarColor(decimal percent) =>
        percent >= 100 ? "bg-red-500" :
        percent >= 80 ? "bg-yellow-500" :
        percent >= 50 ? "bg-orange-500" :
        "bg-green-500";

    private string GetProgressBadgeColor(decimal percent) =>
        percent >= 100 ? "bg-red-100 text-red-800" :
        percent >= 80 ? "bg-yellow-100 text-yellow-800" :
        percent >= 50 ? "bg-orange-100 text-orange-800" :
        "bg-green-100 text-green-800";

    private string GetProgressLabel(decimal percent) =>
        percent >= 100 ? "Depasse" :
        percent >= 80 ? "Attention" :
        percent >= 50 ? "En cours" :
        "Confortable";

    private string GetCategoryBorderColor(decimal percent) =>
        percent >= 50 ? "border-red-500" :
        percent >= 25 ? "border-yellow-500" :
        "border-green-500";

    private void OpenEditModal()
    {
        if (budget == null) return;

        budgetForEdit = new BudgetListDto(
            budget.Id,
            budget.Name,
            budget.StartDate,
            budget.EndDate,
            budget.AllocatedAmount,
            budget.SpentAmount,
            budget.RemainingAmount,
            budget.PercentUsed,
            budget.Currency,
            budget.Type,
            budget.AlertThreshold,
            budget.IsExceeded,
            budget.PercentUsed >= budget.AlertThreshold,
            budget.IsActive,
            budget.CreatedAt
        );
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        budgetForEdit = null;
    }

    private async Task HandleAfterSave()
    {
        CloseEditModal();
        await LoadBudgetDetailAsync();
    }
}
