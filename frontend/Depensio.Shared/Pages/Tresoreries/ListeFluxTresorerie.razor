@page "/tresorerie/{boutiqueId:guid}/flux"
@using depensio.Shared.Pages.Tresoreries.Models
@inherits FlowbitePage
@layout MainLayout
@inject ITresorerieService _tresorerieService
@inject NavigationManager _navigationManager
@inject IJSRuntime JSRuntime

<PageTitleComponent Title="Flux de tresorerie" />

<HeaderPage
    Title="Tresorerie"
    SubTitle="Liste des flux de tresorerie"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <!-- Filtres et recherche -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex items-center">
            <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
            <select id="itemsPerPage" @bind="pageSize" @bind:after="OnPageSizeChanged" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <span class="ml-2 text-sm text-gray-600">elements</span>
        </div>
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Rechercher..."
                @bind="searchTerm"
                @bind:event="oninput"
                @bind:after="OnSearchChanged"
                class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
    </div>

    <!-- Filtres avances -->
    <div class="flex flex-wrap gap-3 items-center mb-4 pb-4 border-b border-gray-200">
        <div class="flex items-center gap-2">
            <label class="text-sm text-gray-600">Type:</label>
            <select @bind="selectedType" @bind:after="GetCashFlowsAsync" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option value="">Tous</option>
                <option value="@CashFlowTypeExtended.INCOME">Entree</option>
                <option value="@CashFlowTypeExtended.EXPENSE">Sortie</option>
                <option value="@CashFlowTypeExtended.TRANSFER">Transfert</option>
            </select>
        </div>
        <div class="flex items-center gap-2">
            <label class="text-sm text-gray-600">Statut:</label>
            <select @bind="selectedStatus" @bind:after="GetCashFlowsAsync" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option value="">Tous</option>
                <option value="@CashFlowStatusExtended.DRAFT">Brouillon</option>
                <option value="@CashFlowStatusExtended.PENDING">En attente</option>
                <option value="@CashFlowStatusExtended.APPROVED">Valide</option>
                <option value="@CashFlowStatusExtended.REJECTED">Rejete</option>
                <option value="@CashFlowStatusExtended.CANCELLED">Annule</option>
            </select>
        </div>
        <div class="flex items-center gap-2">
            <label class="text-sm text-gray-600">Du:</label>
            <input type="date" @bind="startDate" @bind:after="GetCashFlowsAsync" class="border border-gray-300 rounded px-2 py-1 text-sm">
        </div>
        <div class="flex items-center gap-2">
            <label class="text-sm text-gray-600">Au:</label>
            <input type="date" @bind="endDate" @bind:after="GetCashFlowsAsync" class="border border-gray-300 rounded px-2 py-1 text-sm">
        </div>
        <button @onclick="ResetFilters" class="text-sm text-gray-500 hover:text-gray-700 underline">
            Reinitialiser
        </button>
        <div class="ml-auto flex items-center gap-2">
            <button @onclick="ExportCashFlowsAsync"
                    disabled="@isExporting"
                    class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg flex items-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed">
                @if (isExporting)
                {
                    <i class="fas fa-spinner fa-spin"></i>
                }
                else
                {
                    <i class="fas fa-file-export"></i>
                }
                <span class="hidden md:inline">Exporter CSV</span>
            </button>
           @*  <a href="/tresorerie/@boutiqueId/flux/nouveau"
                class="px-4 py-2 bg-primary-700 hover:bg-amber-800 text-white rounded-lg flex items-center gap-2">
                <i class="fas fa-plus"></i>
                <span class="hidden md:inline">Nouveau flux</span>
            </a> *@
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingDataComponent />
    }
    else
    {
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-gradient-to-r from-primary-700 to-amber-600 rounded-lg p-4 text-white">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm opacity-80">Total flux</p>
                        <p class="text-2xl font-bold">@totalCount</p>
                    </div>
                    <i class="fas fa-exchange-alt text-3xl opacity-50"></i>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500">Entrees</p>
                        <p class="text-2xl font-bold text-green-600">@totalIncome.ToString("N0") FCFA</p>
                    </div>
                    <i class="fas fa-arrow-down text-3xl text-green-300"></i>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500">Sorties</p>
                        <p class="text-2xl font-bold text-red-600">@totalExpense.ToString("N0") FCFA</p>
                    </div>
                    <i class="fas fa-arrow-up text-3xl text-red-300"></i>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500">Solde</p>
                        <p class="text-2xl font-bold @(totalIncome - totalExpense >= 0 ? "text-green-600" : "text-red-600")">
                            @((totalIncome - totalExpense).ToString("N0")) FCFA
                        </p>
                    </div>
                    <i class="fas fa-balance-scale text-3xl text-gray-300"></i>
                </div>
            </div>
        </div>

        <!-- Desktop Table -->
        <div class="desktop-view bg-white rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-primary-700 text-white">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Reference</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Date</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Type</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Libelle</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Categorie</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Montant</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Compte</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Statut</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (cashFlows.Any())
                    {
                        @foreach(var cashFlow in cashFlows)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @(cashFlow.Reference ?? "-")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @cashFlow.Date.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetTypeColor(cashFlow.Type)">
                                        @GetTypeLabel(cashFlow.Type)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    @cashFlow.Label
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @cashFlow.CategoryName
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium @GetAmountColor(cashFlow.Type)">
                                    @(cashFlow.Type == CashFlowTypeExtended.EXPENSE ? "-" : "+")@cashFlow.Amount.ToString("N0") @cashFlow.Currency
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @cashFlow.AccountName
                                    @if (cashFlow.Type == CashFlowTypeExtended.TRANSFER && !string.IsNullOrEmpty(cashFlow.DestinationAccountName))
                                    {
                                        <span class="text-gray-400"> → @cashFlow.DestinationAccountName</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetStatusColor(cashFlow.Status)">
                                        @GetStatusLabel(cashFlow.Status)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <a href="/tresorerie/@boutiqueId/flux/@cashFlow.Id"
                                        class="text-blue-600 hover:text-blue-800 mr-3" title="Voir le detail">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (cashFlow.Status == CashFlowStatusExtended.DRAFT)
                                    {
                                        <a href="/tresorerie/@boutiqueId/flux/@cashFlow.Id/modifier"
                                            class="text-primary-700 hover:text-amber-800" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center">
                                <i class="fas fa-exchange-alt text-6xl text-gray-300 mb-4"></i>
                                <p class="text-gray-500 text-lg">Aucun flux trouve</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="mobile-view">
            <div class="grid grid-cols-1 gap-4">
                @if (cashFlows.Any())
                {
                    @foreach (var cashFlow in cashFlows)
                    {
                        <div class="bg-white rounded-lg shadow-md p-4 border-l-4 @GetBorderColor(cashFlow.Type)">
                            <div class="flex justify-between items-start mb-2">
                                <div>
                                    <h3 class="font-medium text-gray-900">@cashFlow.Label</h3>
                                    <span class="text-xs text-gray-500">@(cashFlow.Reference ?? "Sans reference")</span>
                                </div>
                                <span class="px-2 text-xs font-semibold rounded-full @GetStatusColor(cashFlow.Status)">
                                    @GetStatusLabel(cashFlow.Status)
                                </span>
                            </div>
                            <div class="flex justify-between items-center mt-3">
                                <div>
                                    <span class="text-lg font-bold @GetAmountColor(cashFlow.Type)">
                                        @(cashFlow.Type == CashFlowTypeExtended.EXPENSE ? "-" : "+")@cashFlow.Amount.ToString("N0") @cashFlow.Currency
                                    </span>
                                    <div class="text-xs text-gray-500 mt-1">
                                        <span>@cashFlow.Date.ToString("dd/MM/yyyy")</span> ·
                                        <span>@cashFlow.AccountName</span>
                                    </div>
                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="px-2 text-xs rounded-full @GetTypeColor(cashFlow.Type)">
                                        @GetTypeLabel(cashFlow.Type)
                                    </span>
                                    <a href="/tresorerie/@boutiqueId/flux/@cashFlow.Id"
                                        class="text-blue-600 hover:text-blue-800 p-2" title="Voir le detail">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-exchange-alt text-6xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500 text-lg">Aucun flux trouve</p>
                    </div>
                }
            </div>
        </div>

        <!-- Footer with pagination -->
        <div class="flex flex-col md:flex-row justify-between items-center mt-4 pt-4 border-t border-gray-200">
            <div class="mb-4 md:mb-0">
                <span class="text-sm text-gray-600">@totalCount flux</span>
            </div>
            <div class="text-sm text-gray-600 mb-4 md:mb-0">
                Affichage de @StartIndex a @EndIndex sur @totalCount elements
            </div>
            <div class="flex items-center gap-1">
                <button @onclick="GoToPreviousPage"
                        disabled="@(!hasPrevious)"
                        class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-angle-left"></i>
                </button>
                @for (int i = 1; i <= totalPages; i++)
                {
                    var pageNumber = i;
                    <button @onclick="() => GoToPage(pageNumber)"
                            class="px-3 py-1 rounded @(currentPage == pageNumber ? "bg-primary-700 text-white" : "border border-gray-300 text-gray-600 hover:bg-gray-100")">
                        @pageNumber
                    </button>
                }
                <button @onclick="GoToNextPage"
                        disabled="@(!hasNext)"
                        class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-angle-right"></i>
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid boutiqueId { get; set; }

    private List<CashFlowListDto> cashFlows = new();
    private bool isLoading = true;
    private bool isExporting = false;
    private string searchTerm = "";

    // Filters
    private CashFlowTypeExtended? selectedType = null;
    private CashFlowStatusExtended? selectedStatus = null;
    private DateTime? startDate = null;
    private DateTime? endDate = null;

    // Pagination
    private int pageSize = 10;
    private int currentPage = 1;
    private int totalCount = 0;
    private int totalPages = 1;
    private bool hasPrevious = false;
    private bool hasNext = false;

    // Summary
    private decimal totalIncome = 0;
    private decimal totalExpense = 0;

    private int StartIndex => totalCount == 0 ? 0 : ((currentPage - 1) * pageSize) + 1;
    private int EndIndex => Math.Min(currentPage * pageSize, totalCount);

    protected override async Task OnInitializedAsync()
    {
        await GetCashFlowsAsync();
    }

    private async Task GetCashFlowsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.GetCashFlowsAsync(
                boutiqueId,
                selectedType,
                selectedStatus,
                null,
                null,
                startDate,
                endDate,
                string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm.Trim(),
                currentPage,
                pageSize,
                "date",
                "desc");

            if (response.Success && response.Data != null)
            {
                cashFlows = response.Data.CashFlows.ToList();
                totalCount = response.Data.TotalCount;
                totalPages = response.Data.TotalPages;
                hasPrevious = response.Data.HasPrevious;
                hasNext = response.Data.HasNext;
                currentPage = response.Data.Page;

                // Calculate summaries from current data
                totalIncome = cashFlows
                    .Where(c => c.Type == CashFlowTypeExtended.INCOME && c.Status == CashFlowStatusExtended.APPROVED)
                    .Sum(c => c.Amount);
                totalExpense = cashFlows
                    .Where(c => c.Type == CashFlowTypeExtended.EXPENSE && c.Status == CashFlowStatusExtended.APPROVED)
                    .Sum(c => c.Amount);
            }
        }
        catch (Exception)
        {
            cashFlows = new List<CashFlowListDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnSearchChanged()
    {
        currentPage = 1;
        await GetCashFlowsAsync();
    }

    private async Task OnPageSizeChanged()
    {
        currentPage = 1;
        await GetCashFlowsAsync();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            await GetCashFlowsAsync();
        }
    }

    private async Task GoToPreviousPage()
    {
        if (hasPrevious)
        {
            currentPage--;
            await GetCashFlowsAsync();
        }
    }

    private async Task GoToNextPage()
    {
        if (hasNext)
        {
            currentPage++;
            await GetCashFlowsAsync();
        }
    }

    private async Task ResetFilters()
    {
        selectedType = null;
        selectedStatus = null;
        startDate = null;
        endDate = null;
        searchTerm = "";
        currentPage = 1;
        await GetCashFlowsAsync();
    }

    private async Task ExportCashFlowsAsync()
    {
        isExporting = true;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.ExportCashFlowsAsync(
                boutiqueId,
                "csv",
                null,
                selectedType,
                selectedStatus,
                null,
                null,
                startDate,
                endDate,
                string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm.Trim());

            if (response.IsSuccessStatusCode)
            {
                var bytes = await response.Content.ReadAsByteArrayAsync();
                var contentDisposition = response.Content.Headers.ContentDisposition;
                var fileName = contentDisposition?.FileName?.Trim('"') ?? $"flux-tresorerie-{DateTime.Now:yyyyMMdd}.csv";
                var contentType = response.Content.Headers.ContentType?.MediaType ?? "text/csv";

                await JSRuntime.InvokeVoidAsync("depensio.downloadFileFromBytes", fileName, contentType, bytes);
            }
        }
        catch (Exception)
        {
            // Handle error silently or show toast notification
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }

    private string GetTypeLabel(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "Entree",
        CashFlowTypeExtended.EXPENSE => "Sortie",
        CashFlowTypeExtended.TRANSFER => "Transfert",
        _ => "Inconnu"
    };

    private string GetTypeColor(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "bg-green-100 text-green-800",
        CashFlowTypeExtended.EXPENSE => "bg-red-100 text-red-800",
        CashFlowTypeExtended.TRANSFER => "bg-blue-100 text-blue-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetBorderColor(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "border-green-500",
        CashFlowTypeExtended.EXPENSE => "border-red-500",
        CashFlowTypeExtended.TRANSFER => "border-blue-500",
        _ => "border-gray-500"
    };

    private string GetAmountColor(CashFlowTypeExtended type) => type switch
    {
        CashFlowTypeExtended.INCOME => "text-green-600",
        CashFlowTypeExtended.EXPENSE => "text-red-600",
        CashFlowTypeExtended.TRANSFER => "text-blue-600",
        _ => "text-gray-600"
    };

    private string GetStatusLabel(CashFlowStatusExtended status) => status switch
    {
        CashFlowStatusExtended.DRAFT => "Brouillon",
        CashFlowStatusExtended.PENDING => "En attente",
        CashFlowStatusExtended.APPROVED => "Valide",
        CashFlowStatusExtended.REJECTED => "Rejete",
        CashFlowStatusExtended.CANCELLED => "Annule",
        _ => "Inconnu"
    };

    private string GetStatusColor(CashFlowStatusExtended status) => status switch
    {
        CashFlowStatusExtended.DRAFT => "bg-gray-100 text-gray-800",
        CashFlowStatusExtended.PENDING => "bg-yellow-100 text-yellow-800",
        CashFlowStatusExtended.APPROVED => "bg-green-100 text-green-800",
        CashFlowStatusExtended.REJECTED => "bg-red-100 text-red-800",
        CashFlowStatusExtended.CANCELLED => "bg-gray-100 text-gray-600",
        _ => "bg-gray-100 text-gray-800"
    };
}
