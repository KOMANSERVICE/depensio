@page "/tresorerie/{boutiqueId:guid}/budgets"
@using depensio.Shared.Pages.Tresoreries.Models
@inherits FlowbitePage
@layout MainLayout
@inject ITresorerieService _tresorerieService
@inject NavigationManager NavigationManager

<PageTitleComponent Title="Gestion des budgets" />

<HeaderPage
    Title="Budgets"
    SubTitle="Gestion des budgets de tresorerie"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
        <div class="flex items-center">
            <label for="itemsPerPage" class="mr-2 text-sm text-gray-600">Afficher</label>
            <select id="itemsPerPage" @bind="itemsPerPage" @bind:after="OnItemsPerPageChanged" class="border border-gray-300 rounded px-2 py-1 text-sm">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <span class="ml-2 text-sm text-gray-600">elements</span>
        </div>
        <div class="relative w-full md:w-64">
            <input type="text" placeholder="Rechercher un budget..."
                @bind="searchTerm"
                @bind:event="oninput"
                @bind:after="ApplyFilter"
                class="w-full border border-gray-300 rounded-md pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex gap-3 items-center">
            <div class="flex items-center">
                <input type="checkbox" id="showInactive" @bind="showInactive" @bind:after="GetBudgetsAsync"
                    class="rounded text-primary-700 focus:ring-primary-700 mr-2">
                <label for="showInactive" class="text-sm text-gray-600">Afficher inactifs</label>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingDataComponent />
    }
    else
    {
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-gradient-to-r from-primary-700 to-amber-600 rounded-lg p-4 text-white">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm opacity-80">Total Budgets</p>
                        <p class="text-2xl font-bold">@totalCount</p>
                    </div>
                    <i class="fas fa-wallet text-3xl opacity-50"></i>
                </div>
            </div>
            <div class="bg-white border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500">Budget Total Alloue</p>
                        <p class="text-2xl font-bold text-gray-800">@totalAllocated.ToString("N0") FCFA</p>
                    </div>
                    <i class="fas fa-coins text-3xl text-gray-300"></i>
                </div>
            </div>
            <div class="bg-white border border-red-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-red-600">Budgets depasses</p>
                        <p class="text-2xl font-bold @(exceededCount > 0 ? "text-red-600" : "text-green-600")">@exceededCount</p>
                    </div>
                    <i class="fas fa-exclamation-triangle text-3xl @(exceededCount > 0 ? "text-red-300" : "text-gray-300")"></i>
                </div>
            </div>
            <div class="bg-white border border-yellow-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-yellow-600">En alerte</p>
                        <p class="text-2xl font-bold @(nearAlertCount > 0 ? "text-yellow-600" : "text-green-600")">@nearAlertCount</p>
                    </div>
                    <i class="fas fa-exclamation-circle text-3xl @(nearAlertCount > 0 ? "text-yellow-300" : "text-gray-300")"></i>
                </div>
            </div>
        </div>

        <!-- Desktop Table -->
        <div class="desktop-view bg-white rounded-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-primary-700 text-white">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Nom du budget</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Type</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Periode</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            Alloue</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            Depense</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider">
                            Restant</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Progression</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Statut</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (paginatedBudgets.Any())
                    {
                        @foreach(var budget in paginatedBudgets)
                        {
                            <tr class="@GetRowBackgroundColor(budget)">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 rounded-full flex items-center justify-center @GetTypeBackgroundColor(budget.Type) mr-3">
                                            <i class="@GetTypeIcon(budget.Type) text-white text-sm"></i>
                                        </div>
                                        <div class="text-sm font-medium text-gray-900">
                                            @budget.Name
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetTypeColor(budget.Type)">
                                        @GetTypeLabel(budget.Type)
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @budget.StartDate.ToString("dd/MM/yyyy") - @budget.EndDate.ToString("dd/MM/yyyy")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                                    @budget.AllocatedAmount.ToString("N0") @budget.Currency
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-red-600">
                                    @budget.SpentAmount.ToString("N0") @budget.Currency
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-right @(budget.RemainingAmount < 0 ? "text-red-600" : "text-green-600")">
                                    @budget.RemainingAmount.ToString("N0") @budget.Currency
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="w-24">
                                        <div class="flex items-center gap-2">
                                            <div class="flex-1 overflow-hidden h-2 text-xs flex rounded-full bg-gray-200">
                                                <div style="width:@Math.Min(budget.PercentUsed, 100).ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                                                     class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center @GetProgressBarColor(budget.PercentUsed)">
                                                </div>
                                            </div>
                                            <span class="text-xs @GetPercentColor(budget.PercentUsed)">@budget.PercentUsed.ToString("N0")%</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex flex-wrap gap-1">
                                        @if (budget.IsActive)
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                Actif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                                Inactif
                                            </span>
                                        }
                                        @if (budget.IsExceeded)
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                                Depasse
                                            </span>
                                        }
                                        else if (budget.IsNearAlert)
                                        {
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                                Alerte
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <a href="/tresorerie/@boutiqueId/budgets/@budget.Id"
                                        class="text-blue-600 hover:text-blue-800" title="Voir le detail">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center">
                                <i class="fas fa-wallet text-6xl text-gray-300 mb-4"></i>
                                <p class="text-gray-500 text-lg">Aucun budget trouve</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile Cards -->
        <div class="mobile-view">
            <div class="grid grid-cols-1 gap-4">
                @if (paginatedBudgets.Any())
                {
                    @foreach (var budget in paginatedBudgets)
                    {
                        <div class="bg-white rounded-lg shadow-md p-4 @GetMobileBorderColor(budget)">
                            <div class="flex justify-between items-start mb-2">
                                <div class="flex items-center gap-2">
                                    <div class="w-8 h-8 rounded-full flex items-center justify-center @GetTypeBackgroundColor(budget.Type)">
                                        <i class="@GetTypeIcon(budget.Type) text-white text-sm"></i>
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-gray-900">@budget.Name</h3>
                                        <span class="text-xs px-2 py-0.5 rounded-full @GetTypeColor(budget.Type)">@GetTypeLabel(budget.Type)</span>
                                    </div>
                                </div>
                                <div class="flex flex-wrap gap-1">
                                    @if (budget.IsActive)
                                    {
                                        <span class="px-2 text-xs font-semibold rounded-full bg-green-100 text-green-800">Actif</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Inactif</span>
                                    }
                                    @if (budget.IsExceeded)
                                    {
                                        <span class="px-2 text-xs font-semibold rounded-full bg-red-100 text-red-800">Depasse</span>
                                    }
                                    else if (budget.IsNearAlert)
                                    {
                                        <span class="px-2 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Alerte</span>
                                    }
                                </div>
                            </div>

                            <div class="text-xs text-gray-500 mb-3">
                                <i class="fas fa-calendar-alt mr-1"></i>
                                @budget.StartDate.ToString("dd/MM/yyyy") - @budget.EndDate.ToString("dd/MM/yyyy")
                            </div>

                            <div class="grid grid-cols-3 gap-2 mb-3">
                                <div class="text-center">
                                    <p class="text-xs text-gray-500">Alloue</p>
                                    <p class="text-sm font-semibold text-gray-900">@budget.AllocatedAmount.ToString("N0")</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500">Depense</p>
                                    <p class="text-sm font-semibold text-red-600">@budget.SpentAmount.ToString("N0")</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500">Restant</p>
                                    <p class="text-sm font-semibold @(budget.RemainingAmount < 0 ? "text-red-600" : "text-green-600")">@budget.RemainingAmount.ToString("N0")</p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="flex items-center justify-between mb-1">
                                    <span class="text-xs text-gray-500">Progression</span>
                                    <span class="text-xs font-semibold @GetPercentColor(budget.PercentUsed)">@budget.PercentUsed.ToString("N1")%</span>
                                </div>
                                <div class="overflow-hidden h-2 text-xs flex rounded-full bg-gray-200">
                                    <div style="width:@Math.Min(budget.PercentUsed, 100).ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                                         class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center @GetProgressBarColor(budget.PercentUsed)">
                                    </div>
                                </div>
                            </div>

                            <div class="flex justify-end">
                                <a href="/tresorerie/@boutiqueId/budgets/@budget.Id"
                                    class="text-blue-600 hover:text-blue-800 p-2" title="Voir le detail">
                                    <i class="fas fa-eye mr-1"></i> Detail
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-wallet text-6xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500 text-lg">Aucun budget trouve</p>
                    </div>
                }
            </div>
        </div>

        <!-- Footer with pagination -->
        <div class="flex flex-col md:flex-row justify-between items-center mt-4 pt-4 border-t border-gray-200">
            <div class="mb-4 md:mb-0">
                <span class="text-sm text-gray-600">@filteredBudgets.Count budget(s)</span>
            </div>
            <div class="text-sm text-gray-600 mb-4 md:mb-0">
                Affichage de @StartIndex a @EndIndex sur @filteredBudgets.Count elements
            </div>
            <div class="flex items-center gap-1">
                <button @onclick="GoToPreviousPage"
                        disabled="@(currentPage <= 1)"
                        class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-angle-left"></i>
                </button>
                @for (int i = 1; i <= TotalPages; i++)
                {
                    var pageNumber = i;
                    <button @onclick="() => GoToPage(pageNumber)"
                            class="px-3 py-1 rounded @(currentPage == pageNumber ? "bg-primary-700 text-white" : "border border-gray-300 text-gray-600 hover:bg-gray-100")">
                        @pageNumber
                    </button>
                }
                <button @onclick="GoToNextPage"
                        disabled="@(currentPage >= TotalPages)"
                        class="px-3 py-1 rounded border border-gray-300 text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed">
                    <i class="fas fa-angle-right"></i>
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid boutiqueId { get; set; }

    private List<BudgetListDto> budgets = new();
    private List<BudgetListDto> filteredBudgets = new();
    private bool isLoading = true;
    private bool showInactive = false;
    private string searchTerm = "";
    private int totalCount = 0;
    private int exceededCount = 0;
    private int nearAlertCount = 0;
    private decimal totalAllocated = 0;

    // Pagination
    private int itemsPerPage = 10;
    private int currentPage = 1;

    private List<BudgetListDto> paginatedBudgets => filteredBudgets
        .Skip((currentPage - 1) * itemsPerPage)
        .Take(itemsPerPage)
        .ToList();

    private int TotalPages => filteredBudgets.Count == 0 ? 1 : (int)Math.Ceiling((double)filteredBudgets.Count / itemsPerPage);
    private int StartIndex => filteredBudgets.Count == 0 ? 0 : ((currentPage - 1) * itemsPerPage) + 1;
    private int EndIndex => Math.Min(currentPage * itemsPerPage, filteredBudgets.Count);

    protected override async Task OnInitializedAsync()
    {
        await GetBudgetsAsync();
    }

    private async Task GetBudgetsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            bool? isActive = showInactive ? null : true;
            var response = await _tresorerieService.GetBudgetsAsync(boutiqueId, isActive);
            if (response.Success && response.Data != null)
            {
                budgets = response.Data.Budgets.ToList();
                totalCount = response.Data.TotalCount;
                exceededCount = response.Data.ExceededCount;
                nearAlertCount = response.Data.NearAlertCount;
                totalAllocated = budgets.Sum(b => b.AllocatedAmount);
                ApplyFilter();
            }
        }
        catch (Exception)
        {
            budgets = new List<BudgetListDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplyFilter()
    {
        var filtered = budgets.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var search = searchTerm.Trim().ToLower();
            filtered = filtered.Where(b =>
                (b.Name?.ToLower().Contains(search) ?? false) ||
                GetTypeLabel(b.Type).ToLower().Contains(search)
            );
        }

        filteredBudgets = filtered.ToList();
        currentPage = 1;
    }

    private void OnItemsPerPageChanged()
    {
        currentPage = 1;
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= TotalPages)
        {
            currentPage = page;
        }
    }

    private void GoToPreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
        }
    }

    private void GoToNextPage()
    {
        if (currentPage < TotalPages)
        {
            currentPage++;
        }
    }

    private string GetTypeLabel(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "Global",
        BudgetType.CATEGORY => "Par categorie",
        BudgetType.PROJECT => "Projet",
        _ => "Inconnu"
    };

    private string GetTypeColor(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "bg-blue-100 text-blue-800",
        BudgetType.CATEGORY => "bg-purple-100 text-purple-800",
        BudgetType.PROJECT => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetTypeBackgroundColor(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "bg-blue-500",
        BudgetType.CATEGORY => "bg-purple-500",
        BudgetType.PROJECT => "bg-green-500",
        _ => "bg-gray-500"
    };

    private string GetTypeIcon(BudgetType type) => type switch
    {
        BudgetType.GLOBAL => "fas fa-globe",
        BudgetType.CATEGORY => "fas fa-tags",
        BudgetType.PROJECT => "fas fa-project-diagram",
        _ => "fas fa-wallet"
    };

    private string GetPercentColor(decimal percent) =>
        percent >= 100 ? "text-red-600" :
        percent >= 80 ? "text-yellow-600" :
        percent >= 50 ? "text-orange-600" :
        "text-green-600";

    private string GetProgressBarColor(decimal percent) =>
        percent >= 100 ? "bg-red-500" :
        percent >= 80 ? "bg-yellow-500" :
        percent >= 50 ? "bg-orange-500" :
        "bg-green-500";

    private string GetRowBackgroundColor(BudgetListDto budget) =>
        budget.IsExceeded ? "bg-red-50" :
        budget.IsNearAlert ? "bg-yellow-50" :
        "";

    private string GetMobileBorderColor(BudgetListDto budget) =>
        budget.IsExceeded ? "border-l-4 border-red-500" :
        budget.IsNearAlert ? "border-l-4 border-yellow-500" :
        "";
}
