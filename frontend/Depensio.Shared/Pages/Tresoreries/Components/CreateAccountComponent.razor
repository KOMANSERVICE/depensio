@using depensio.Shared.Pages.Tresoreries.Models
@inject ITresorerieService _tresorerieService

<LoadingComponent IsLoad="@isLoad" />

<EditForm EditContext="@editContext" OnValidSubmit="HandleCreate">
    <DataAnnotationsValidator />
    <ErrorsSummary editContext="@editContext" />

    <div class="p-6">
        <div class="mb-4">
            <label for="accountName" class="block text-sm font-medium text-gray-700 mb-1">Nom du compte *</label>
            <InputText @bind-Value="localAccount.Name" id="accountName"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700" />
            <div class="error-message">
                <ValidationMessage For="@(() => localAccount.Name)" />
            </div>
        </div>

        <div class="mb-4">
            <label for="accountType" class="block text-sm font-medium text-gray-700 mb-1">Type de compte *</label>
            <InputSelect @bind-Value="localAccount.Type" id="accountType"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700">
                <option value="@AccountType.CASH">Especes</option>
                <option value="@AccountType.BANK">Banque</option>
                <option value="@AccountType.MOBILE_MONEY">Mobile Money</option>
                <option value="@AccountType.OTHER">Autre</option>
            </InputSelect>
            <div class="error-message">
                <ValidationMessage For="@(() => localAccount.Type)" />
            </div>
        </div>

        <div class="mb-4">
            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <InputTextArea @bind-Value="localAccount.Description" id="description" rows="2"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700" />
        </div>

        @if (localAccount.Type == AccountType.BANK)
        {
            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label for="bankName" class="block text-sm font-medium text-gray-700 mb-1">Nom de la banque</label>
                    <InputText @bind-Value="localAccount.BankName" id="bankName"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700" />
                </div>
                <div>
                    <label for="accountNumber" class="block text-sm font-medium text-gray-700 mb-1">Numero de compte</label>
                    <InputText @bind-Value="localAccount.AccountNumber" id="accountNumber"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700" />
                </div>
            </div>
        }

        <div class="mb-4">
            <label for="initialBalance" class="block text-sm font-medium text-gray-700 mb-1">Solde initial (FCFA) *</label>
            <InputNumber @bind-Value="localAccount.InitialBalance" id="initialBalance"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700" />
            <p class="text-xs text-gray-500 mt-1">Montant disponible actuellement dans ce compte</p>
            <div class="error-message">
                <ValidationMessage For="@(() => localAccount.InitialBalance)" />
            </div>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label for="alertThreshold" class="block text-sm font-medium text-gray-700 mb-1">Seuil d'alerte (FCFA)</label>
                <InputNumber @bind-Value="localAccount.AlertThreshold" id="alertThreshold"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700" />
                <p class="text-xs text-gray-500 mt-1">Alerte quand le solde est inferieur a ce montant</p>
            </div>
            <div>
                <label for="overdraftLimit" class="block text-sm font-medium text-gray-700 mb-1">Limite de decouvert (FCFA)</label>
                <InputNumber @bind-Value="localAccount.OverdraftLimit" id="overdraftLimit"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-primary-700 focus:border-primary-700" />
                <p class="text-xs text-gray-500 mt-1">Montant maximum autorise en negatif</p>
            </div>
        </div>

        <div class="mb-4">
            <label class="flex items-center cursor-pointer">
                <InputCheckbox @bind-Value="localAccount.IsDefault"
                    class="rounded text-primary-700 focus:ring-primary-700 mr-2" />
                <span class="text-sm font-medium text-gray-700">Compte par defaut</span>
            </label>
            <p class="text-xs text-gray-500 mt-1 ml-6">Ce compte sera utilise par defaut pour les operations de tresorerie</p>
        </div>
    </div>

    <div class="flex justify-end gap-3 px-6 py-4 border-t">
        <button type="button" @onclick="CancelSave"
            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
            Annuler
        </button>
        <button type="submit"
            class="px-4 py-2 bg-primary-700 hover:bg-amber-800 text-white rounded-lg">
            Creer le compte
        </button>
    </div>
</EditForm>

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnAfterSave { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnCancelSave { get; set; }

    [Parameter]
    public Guid BoutiqueId { get; set; }

    private bool isLoad = false;
    private EditContext? editContext;
    private ValidationMessageStore? messageStore;
    private AccountCreateDTO localAccount = new();

    protected override void OnInitialized()
    {
        InitializeEditContext();
    }

    private void InitializeEditContext()
    {
        localAccount = new AccountCreateDTO();
        editContext = new EditContext(localAccount);
        messageStore = new ValidationMessageStore(editContext);
        editContext.OnValidationRequested += (s, e) => messageStore?.Clear();
        editContext.OnFieldChanged += (s, e) => messageStore?.Clear(e.FieldIdentifier);
    }

    private void CancelSave()
    {
        OnCancelSave.InvokeAsync(null);
    }

    private async Task HandleCreate()
    {
        isLoad = true;
        try
        {
            var request = new CreateAccountRequest
            {
                Name = localAccount.Name,
                Description = localAccount.Description,
                Type = localAccount.Type,
                InitialBalance = localAccount.InitialBalance,
                AlertThreshold = localAccount.AlertThreshold,
                OverdraftLimit = localAccount.OverdraftLimit,
                AccountNumber = localAccount.AccountNumber,
                BankName = localAccount.BankName,
                IsDefault = localAccount.IsDefault
            };

            var result = await _tresorerieService.CreateAccountAsync(BoutiqueId, request);

            if (result.Success)
            {
                messageStore?.Clear();
                editContext?.NotifyValidationStateChanged();
                await OnAfterSave.InvokeAsync(null);
            }
        }
        catch (ApiException ex)
        {
            try
            {
                var errorResult = JsonSerializer.Deserialize<ErrorMessage>(ex.Content!, new JsonSerializerOptions
                {
                    PropertyNameCaseInsensitive = true
                });

                messageStore?.Clear();

                if (errorResult?.ValidationErrors != null && errorResult.ValidationErrors.Any())
                {
                    foreach (var validationError in errorResult.ValidationErrors)
                    {
                        var propertyName = validationError.PropertyName;
                        if (propertyName.Contains('.'))
                            propertyName = propertyName.Split('.').Last();

                        var fieldIdentifier = new FieldIdentifier(localAccount, propertyName);
                        messageStore?.Add(fieldIdentifier, validationError.ErrorMessage);
                    }
                }
                else if (!string.IsNullOrWhiteSpace(errorResult?.Detail))
                {
                    var fieldIdentifier = new FieldIdentifier(localAccount, string.Empty);
                    messageStore?.Add(fieldIdentifier, errorResult.Detail);
                }

                editContext?.NotifyValidationStateChanged();
            }
            catch
            {
                messageStore?.Add(new FieldIdentifier(localAccount, string.Empty), "Une erreur est survenue.");
                editContext?.NotifyValidationStateChanged();
            }
        }
        finally
        {
            isLoad = false;
            StateHasChanged();
        }
    }
}
