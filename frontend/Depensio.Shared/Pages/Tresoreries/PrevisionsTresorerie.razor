@page "/tresorerie/{boutiqueId:guid}/reports/cash-flow-forecast"
@using depensio.Shared.Pages.Tresoreries.Models
@inherits FlowbitePage
@layout MainLayout
@inject ITresorerieService _tresorerieService
@inject NavigationManager NavigationManager

<PageTitleComponent Title="Previsions de tresorerie" />

<HeaderPage
    Title="Previsions de tresorerie"
    SubTitle="Analyse previsionnelle des flux de tresorerie"/>

<div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <!-- Filtres -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
        <div class="flex flex-wrap items-center gap-3">
            <div class="flex items-center gap-2">
                <label for="days" class="text-sm text-gray-600">Periode de prevision</label>
                <select id="days" @bind="selectedDays"
                    class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary-700 focus:border-transparent">
                    <option value="7">7 jours</option>
                    <option value="14">14 jours</option>
                    <option value="30">30 jours</option>
                    <option value="60">60 jours</option>
                    <option value="90">90 jours</option>
                </select>
            </div>
            <div class="flex items-center gap-2">
                <input type="checkbox" id="includePending" @bind="includePending"
                    class="h-4 w-4 text-primary-700 focus:ring-primary-700 border-gray-300 rounded">
                <label for="includePending" class="text-sm text-gray-600">Inclure les flux en attente</label>
            </div>
            <button @onclick="LoadForecastAsync"
                class="px-4 py-2 bg-primary-700 text-white rounded-lg hover:bg-amber-800 flex items-center gap-2">
                <i class="fas fa-sync-alt"></i>
                Actualiser
            </button>
        </div>
        <div class="flex gap-3 items-center">
            <a href="/tresorerie/@boutiqueId/dashboard"
                class="text-primary-700 hover:text-primary-800 text-sm flex items-center gap-1">
                <i class="fas fa-arrow-left"></i>
                Tableau de bord
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingDataComponent />
    }
    else if (forecast == null)
    {
        <div class="text-center py-12">
            <i class="fas fa-chart-line text-6xl text-gray-300 mb-4"></i>
            <p class="text-gray-500 text-lg">Impossible de charger les previsions</p>
            <button @onclick="LoadForecastAsync" class="mt-4 px-4 py-2 bg-primary-700 text-white rounded-lg hover:bg-amber-800">
                <i class="fas fa-refresh mr-2"></i>Reessayer
            </button>
        </div>
    }
    else
    {
        <!-- Alert risque negatif -->
        @if (forecast.HasNegativeRisk)
        {
            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-full flex items-center justify-center bg-red-500 mr-4">
                        <i class="fas fa-exclamation-triangle text-white text-xl"></i>
                    </div>
                    <div>
                        <p class="text-lg font-semibold text-red-800">Risque de solde negatif detecte</p>
                        <p class="text-sm text-red-600">
                            @forecast.Summary.DaysWithNegativeBalance jour(s) avec solde negatif prevus sur la periode.
                            @if (forecast.CriticalDates.Any())
                            {
                                <span>Premiere date critique: @forecast.CriticalDates.First().Date.ToString("dd/MM/yyyy")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        }

        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <!-- Solde actuel -->
            <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-blue-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Solde actuel</p>
                        <p class="text-2xl font-bold @(forecast.CurrentBalance >= 0 ? "text-blue-600" : "text-red-600")">
                            @forecast.CurrentBalance.ToString("N0") @forecast.Currency
                        </p>
                    </div>
                    <div class="w-12 h-12 rounded-full flex items-center justify-center bg-blue-100">
                        <i class="fas fa-wallet text-blue-600 text-lg"></i>
                    </div>
                </div>
            </div>

            <!-- Solde previsionnel -->
            <div class="bg-white rounded-lg shadow-md p-4 border-l-4 @(forecast.ForecastedEndBalance >= 0 ? "border-green-500" : "border-red-500")">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Solde previsionnel (J+@forecast.Days)</p>
                        <p class="text-2xl font-bold @(forecast.ForecastedEndBalance >= 0 ? "text-green-600" : "text-red-600")">
                            @forecast.ForecastedEndBalance.ToString("N0") @forecast.Currency
                        </p>
                    </div>
                    <div class="w-12 h-12 rounded-full flex items-center justify-center @(forecast.ForecastedEndBalance >= 0 ? "bg-green-100" : "bg-red-100")">
                        <i class="fas fa-chart-line @(forecast.ForecastedEndBalance >= 0 ? "text-green-600" : "text-red-600") text-lg"></i>
                    </div>
                </div>
            </div>

            <!-- Entrees prevues -->
            <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-green-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Entrees prevues</p>
                        <p class="text-2xl font-bold text-green-600">
                            +@forecast.Summary.TotalForecastedIncome.ToString("N0") @forecast.Currency
                        </p>
                        <p class="text-xs text-gray-400">
                            dont @forecast.Summary.TotalRecurringIncome.ToString("N0") recurrents
                        </p>
                    </div>
                    <div class="w-12 h-12 rounded-full flex items-center justify-center bg-green-100">
                        <i class="fas fa-arrow-down text-green-600 text-lg"></i>
                    </div>
                </div>
            </div>

            <!-- Sorties prevues -->
            <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-red-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Sorties prevues</p>
                        <p class="text-2xl font-bold text-red-600">
                            -@forecast.Summary.TotalForecastedExpense.ToString("N0") @forecast.Currency
                        </p>
                        <p class="text-xs text-gray-400">
                            dont @forecast.Summary.TotalRecurringExpense.ToString("N0") recurrents
                        </p>
                    </div>
                    <div class="w-12 h-12 rounded-full flex items-center justify-center bg-red-100">
                        <i class="fas fa-arrow-up text-red-600 text-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Period info -->
        <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="flex items-center gap-2">
                    <i class="fas fa-calendar-alt text-primary-700"></i>
                    <span class="text-sm text-gray-600">Periode de prevision: </span>
                    <span class="font-medium">@forecast.StartDate.ToString("dd/MM/yyyy") - @forecast.EndDate.ToString("dd/MM/yyyy") (@forecast.Days jours)</span>
                </div>
                <div class="flex items-center gap-2">
                    <i class="fas fa-clock text-primary-700"></i>
                    <span class="text-sm text-gray-600">Calcule le: </span>
                    <span class="font-medium">@forecast.CalculatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                @if (forecast.IncludePending)
                {
                    <div class="flex items-center gap-2">
                        <i class="fas fa-hourglass-half text-yellow-500"></i>
                        <span class="text-sm text-gray-600">Flux en attente inclus</span>
                    </div>
                }
            </div>
        </div>

        <!-- Critical Dates -->
        @if (forecast.CriticalDates.Any())
        {
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-exclamation-circle mr-2 text-red-500"></i>Dates critiques (@forecast.CriticalDates.Count)
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @foreach (var critical in forecast.CriticalDates)
                    {
                        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="font-medium text-red-800">@critical.Date.ToString("dddd dd/MM/yyyy")</span>
                                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                    Critique
                                </span>
                            </div>
                            <p class="text-sm text-gray-600 mb-1">@critical.Reason</p>
                            <p class="text-lg font-bold text-red-600">@critical.ForecastedBalance.ToString("N0") @forecast.Currency</p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Pending flows summary -->
        @if (forecast.IncludePending && (forecast.Summary.TotalPendingIncome > 0 || forecast.Summary.TotalPendingExpense > 0))
        {
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full flex items-center justify-center bg-yellow-500 mr-3">
                            <i class="fas fa-hourglass-half text-white text-lg"></i>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-yellow-800">Flux en attente de validation inclus dans les previsions</p>
                            <p class="text-xs text-yellow-600">
                                Entrees: +@forecast.Summary.TotalPendingIncome.ToString("N0") @forecast.Currency |
                                Sorties: -@forecast.Summary.TotalPendingExpense.ToString("N0") @forecast.Currency
                            </p>
                        </div>
                    </div>
                    <a href="/tresorerie/@boutiqueId/flux/pending"
                       class="px-3 py-1 text-sm bg-yellow-500 text-white rounded-lg hover:bg-yellow-600">
                        Voir les flux
                    </a>
                </div>
            </div>
        }

        <!-- Daily Forecast Table -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-calendar-day mr-2 text-primary-700"></i>Previsions journalieres
            </h3>
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Solde debut</th>
                            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Entrees</th>
                            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Sorties</th>
                            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Recurrents</th>
                            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">Solde fin</th>
                            <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">Statut</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var day in forecast.DailyForecast)
                        {
                            var rowClass = day.IsCritical ? "bg-red-50" : (day.IsNegative ? "bg-yellow-50" : "");
                            <tr class="@rowClass">
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    @day.Date.ToString("ddd dd/MM")
                                </td>
                                <td class="px-4 py-3 text-sm text-right @(day.OpeningBalance >= 0 ? "text-gray-900" : "text-red-600")">
                                    @day.OpeningBalance.ToString("N0")
                                </td>
                                <td class="px-4 py-3 text-sm text-right text-green-600">
                                    @if (day.Income > 0 || day.PendingIncome > 0)
                                    {
                                        <span>+@((day.Income + day.PendingIncome).ToString("N0"))</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-right text-red-600">
                                    @if (day.Expense > 0 || day.PendingExpense > 0)
                                    {
                                        <span>-@((day.Expense + day.PendingExpense).ToString("N0"))</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-right text-purple-600">
                                    @if (day.RecurringIncome > 0 || day.RecurringExpense > 0)
                                    {
                                        <span>@((day.RecurringIncome - day.RecurringExpense).ToString("N0"))</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-right font-semibold @(day.ClosingBalance >= 0 ? "text-gray-900" : "text-red-600")">
                                    @day.ClosingBalance.ToString("N0")
                                </td>
                                <td class="px-4 py-3 text-center">
                                    @if (day.IsCritical)
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                            <i class="fas fa-exclamation-triangle mr-1"></i>Critique
                                        </span>
                                    }
                                    else if (day.IsNegative)
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            <i class="fas fa-exclamation mr-1"></i>Negatif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                            <i class="fas fa-check mr-1"></i>OK
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Graphique d'evolution -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-chart-area mr-2 text-primary-700"></i>Evolution du solde previsionnel
            </h3>
            <div class="h-48 flex items-end justify-between gap-1">
                @{
                    var maxBalance = forecast.DailyForecast.Max(d => Math.Abs(d.ClosingBalance));
                    var minBalance = forecast.DailyForecast.Min(d => d.ClosingBalance);
                    var hasNegative = minBalance < 0;
                }
                @foreach (var day in forecast.DailyForecast.Take(Math.Min(30, forecast.DailyForecast.Count)))
                {
                    var height = maxBalance > 0 ? Math.Abs(day.ClosingBalance) / maxBalance * 100 : 0;
                    var isNegative = day.ClosingBalance < 0;
                    var barColor = day.IsCritical ? "bg-red-600" : (isNegative ? "bg-yellow-500" : "bg-green-500");

                    <div class="flex-1 flex flex-col items-center justify-end h-full">
                        <div class="w-full @barColor rounded-t"
                             style="height: @height.ToString(System.Globalization.CultureInfo.InvariantCulture)%"
                             title="@day.Date.ToString("dd/MM"): @day.ClosingBalance.ToString("N0") @forecast.Currency">
                        </div>
                    </div>
                }
            </div>
            <div class="flex justify-between mt-2">
                <span class="text-xs text-gray-500">@forecast.StartDate.ToString("dd/MM")</span>
                <span class="text-xs text-gray-500">@forecast.EndDate.ToString("dd/MM")</span>
            </div>
            <div class="flex justify-center gap-6 mt-4">
                <div class="flex items-center gap-1">
                    <div class="w-3 h-3 bg-green-500 rounded"></div>
                    <span class="text-xs text-gray-500">Solde positif</span>
                </div>
                <div class="flex items-center gap-1">
                    <div class="w-3 h-3 bg-yellow-500 rounded"></div>
                    <span class="text-xs text-gray-500">Solde negatif</span>
                </div>
                <div class="flex items-center gap-1">
                    <div class="w-3 h-3 bg-red-600 rounded"></div>
                    <span class="text-xs text-gray-500">Critique</span>
                </div>
            </div>
        </div>

        <!-- Actions rapides -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-bolt mr-2 text-primary-700"></i>Actions rapides
            </h3>
            <div class="flex flex-wrap gap-3">
                <a href="/tresorerie/@boutiqueId/flux"
                   class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center">
                    <i class="fas fa-exchange-alt mr-2"></i>Voir les flux
                </a>
                <a href="/tresorerie/@boutiqueId/flux-recurrents"
                   class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 flex items-center">
                    <i class="fas fa-repeat mr-2"></i>Flux recurrents
                </a>
                <a href="/tresorerie/@boutiqueId/reports/cash-flow-statement"
                   class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 flex items-center">
                    <i class="fas fa-chart-bar mr-2"></i>Etat des flux
                </a>
                <a href="/tresorerie/@boutiqueId/budgets"
                   class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 flex items-center">
                    <i class="fas fa-chart-pie mr-2"></i>Budgets
                </a>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid boutiqueId { get; set; }

    private CashFlowForecastDto? forecast;
    private bool isLoading = true;
    private int selectedDays = 30;
    private bool includePending = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadForecastAsync();
    }

    private async Task LoadForecastAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var response = await _tresorerieService.GetCashFlowForecastAsync(
                boutiqueId,
                selectedDays,
                includePending);

            if (response.Success && response.Data != null)
            {
                forecast = response.Data;
            }
            else
            {
                forecast = null;
            }
        }
        catch (Exception)
        {
            forecast = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
