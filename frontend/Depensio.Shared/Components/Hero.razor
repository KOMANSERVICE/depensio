@inject IJSRuntime JS

<div class="max-w-screen-xl mt-24 px-8 xl:px-16 mx-auto" id="about">
    <!-- Hero Top Section -->
    <div class="grid grid-flow-row sm:grid-flow-col grid-rows-2 md:grid-rows-1 sm:grid-cols-2 gap-8 py-6 sm:py-16">
        <div class="flex flex-col justify-center items-start row-start-2 sm:row-start-1">
            <h1 class="text-3xl lg:text-4xl xl:text-5xl font-medium text-black-600 leading-normal">
                Voulez-vous que tout soit facile avec <strong>Depensio</strong> ?
            </h1>
            <p class="text-black-500 mt-4 mb-6">
                Fournissez une solution pour tous vos besoins avec facilité et plaisir en utilisant
                Depensio, découvrez des fonctionnalités intéressantes de notre part.
            </p>
            <button class="bg-orange-500 hover:bg-orange-600 text-white font-semibold px-6 py-3 rounded-lg shadow">
                Commencer
            </button>
        </div>
        <div class="flex w-full">
            <img src="/assets/Illustration1.png"
                 alt="Illustration Depensio"
                 class="w-full h-auto rounded-lg" />
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="relative w-full flex">
        <div class="rounded-lg w-full grid grid-flow-row sm:grid-flow-row grid-cols-1 sm:grid-cols-3 py-9 divide-y-2 sm:divide-y-0 sm:divide-x-2 divide-gray-100 bg-white-500 z-10">
            @foreach (var item in listUser)
            {
                <div class="flex items-center justify-start sm:justify-center py-4 sm:py-6 w-8/12 px-4 sm:w-auto mx-auto sm:mx-0">
                    <div class="flex mx-auto w-40 sm:w-auto">
                        <div class="flex items-center justify-center bg-orange-100 w-12 h-12 mr-6 rounded-full">
                            <img src="@item.Icon" alt="@item.Name icon" class="h-6 w-6" />
                        </div>
                        <div class="flex flex-col">
                            <p class="text-xl text-black-600 font-bold">@item.Number+</p>
                            <p class="text-lg text-black-500">@item.Name</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Blur Shadow -->
        <div class="absolute bg-black-600 opacity-5 w-11/12 rounded-lg h-64 sm:h-48 top-0 mt-8 mx-auto left-0 right-0"
             style="filter: blur(114px);">
        </div>
    </div>
</div>

@code {
    public class HeroStat
    {
        public string Name { get; set; } = "";
        public string Number { get; set; } = "";
        public string Icon { get; set; } = "";
    }

    private List<HeroStat> listUser = new()
    {
        new HeroStat { Name = "Utilisateurs", Number = "390", Icon = "/assets/Icon/heroicons_sm-user.svg" },
        new HeroStat { Name = "Localisations", Number = "20", Icon = "/assets/Icon/gridicons_location.svg" },
        new HeroStat { Name = "Serveurs", Number = "50", Icon = "/assets/Icon/bx_bxs-server.svg" },
    };


