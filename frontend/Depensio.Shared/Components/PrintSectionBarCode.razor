<div class="w-[50mm] h-[30mm] p-[2px] bg-white rounded border border-gray-200 flex flex-col justify-between box-border">
    <!-- Ligne du haut (nom du produit) -->
    <div class="border-b border-dashed border-black pb-0 mb-0">
        <p class="text-[8px] leading-tight text-gray-700 truncate p-no-margin">@Name</p>
    </div>
    <!-- Zone du code-barres -->
    <div class="flex-1 flex justify-center items-center overflow-hidden" data-id="@Id">
        <svg id="svg-print-@Barcode" class="w-full h-full"></svg>
    </div>
</div>

@code {

    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Barcode { get; set; }

    [Parameter]
    public string Id { get; set; }
}
